@page "/Admin/AdminDashboard"
@model Apartment.Pages.Admin.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Portal";
    Layout = "_Layout";
}

<div class="d-flex">
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content -->
    <div class="main-content" style="margin-left: 280px; width: calc(100% - 280px); padding: 2rem;">
        <h1 class="h3 mb-4">System Overview</h1>
        <p class="text-muted mb-4">Welcome back, <strong>@Model.Username</strong>. This is your command center.</p>

        <!-- Key Performance Indicators (KPIs) -->
        <div class="row g-4 mb-5">
            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted text-uppercase small mb-2">Total Users</h6>
                                <h2 class="mb-0">@Model.TotalUsers</h2>
                                <small class="text-muted">Admins, Managers, & Tenants</small>
                            </div>
                            <div class="text-primary" style="font-size: 2.5rem;">
                                <i class="bi bi-people-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted text-uppercase small mb-2">Units Managed</h6>
                                <h2 class="mb-0">@Model.TotalUnits</h2>
                                <small class="text-muted">Total apartment units in system</small>
                            </div>
                            <div class="text-success" style="font-size: 2.5rem;">
                                <i class="bi bi-building"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted text-uppercase small mb-2">Open Service Tickets</h6>
                                <h2 class="mb-0">@Model.OpenServiceTickets</h2>
                                <small class="text-muted">Requires attention from Manager</small>
                            </div>
                            <div class="text-warning" style="font-size: 2.5rem;">
                                <i class="bi bi-ticket-perforated"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted text-uppercase small mb-2">Overdue Bills</h6>
                                <h2 class="mb-0">@Model.OverdueBills</h2>
                                <small class="text-muted">System-wide unpaid invoices</small>
                            </div>
                            <div class="text-danger" style="font-size: 2.5rem;">
                                <i class="bi bi-exclamation-triangle-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Core Administrative Actions -->
        <h2 class="h4 mb-4">Core Administrative Actions</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">Manage Roles</h5>
                        <p class="card-text text-muted">
                            Review, create, and update all user roles (Manager, Tenant) in the system.
                        </p>
                        <a asp-page="/Admin/ManageUsers" class="btn btn-primary">
                            <i class="bi bi-gear me-2"></i>User Control Panel
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">View Activity Log</h5>
                        <p class="card-text text-muted">
                            Check the real-time log of system-critical operations and user actions.
                        </p>
                        <a asp-page="/Admin/AuditLogs" class="btn btn-primary">
                            <i class="bi bi-clipboard-data me-2"></i>View Audit Logs
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">Configuration & Tools</h5>
                        <p class="card-text text-muted">
                            Access backend tools for database seeding, maintenance, and system configuration.
                        </p>
                        <a asp-page="/Admin/SystemTools" class="btn btn-primary">
                            <i class="bi bi-tools me-2"></i>System Tools
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .main-content {
        min-height: 100vh;
        background: #f8f9fa;
    }

    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

