@page "/Admin/AdminDashboard"
@model Apartment.Pages.Admin.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Portal";
    Layout = "_Layout";
    var pesoCulture = CultureInfo.CreateSpecificCulture("en-PH");
}

<div class="matcha-dashboard d-flex">
    @await Html.PartialAsync("_AdminSidebar")

    <div class="matcha-main">
        <!-- Page Header -->
        <header class="matcha-header">
            <div>
                <h1 class="matcha-h1">System Overview</h1>
                <p class="matcha-subtitle">
                    Welcome back,
                    <span class="matcha-tenant-email">
                        @Model.Username
                    </span>. This is your admin command center.
                </p>
            </div>
        </header>

        <!-- KPI Row -->
        <section class="matcha-section mb-4">
            <div class="row g-4">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <article class="matcha-card h-100">
                        <div class="matcha-card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="matcha-body-s text-muted text-uppercase mb-1">Active Tenants</div>
                                    <div class="matcha-amount">@Model.ActiveTenants</div>
                                    <div class="matcha-body-s text-muted">Currently active leases</div>
                                </div>
                                <div class="matcha-card-icon matcha-card-icon-unit">
                                    <i class="bi bi-people"></i>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>

                <div class="col-lg-3 col-md-6 col-sm-6">
                    <article class="matcha-card h-100">
                        <div class="matcha-card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="matcha-body-s text-muted text-uppercase mb-1">Occupied Units</div>
                                    <div class="matcha-amount">@Model.OccupiedUnits</div>
                                    <div class="matcha-body-s text-muted">Units with tenants</div>
                                </div>
                                <div class="matcha-card-icon matcha-card-icon-unit">
                                    <i class="bi bi-building"></i>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>

                <div class="col-lg-3 col-md-6 col-sm-6">
                    <article class="matcha-card h-100">
                        <div class="matcha-card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="matcha-body-s text-muted text-uppercase mb-1">Open Tickets</div>
                                    <div class="matcha-amount">@Model.OpenServiceTickets</div>
                                    <div class="matcha-body-s text-muted">Requests in progress</div>
                                </div>
                                <div class="matcha-card-icon matcha-card-icon-request">
                                    <i class="bi bi-tools"></i>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>

                <div class="col-lg-3 col-md-6 col-sm-6">
                    <article class="matcha-card h-100">
                        <div class="matcha-card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="matcha-body-s text-muted text-uppercase mb-1">Pending Bills</div>
                                    <div class="matcha-amount">@Model.PendingBills</div>
                                    <div class="matcha-body-s text-muted">Needs follow-up</div>
                                </div>
                                <div class="matcha-card-icon matcha-card-icon-payment">
                                    <i class="bi bi-receipt"></i>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </section>

        <!-- Total Revenue Card -->
        <section class="matcha-section mb-4">
            <div class="row g-4">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                    <article class="matcha-card matcha-card-accent h-100">
                        <div class="matcha-card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <div class="matcha-body-s text-muted text-uppercase mb-1">Total Revenue</div>
                                    <div class="matcha-amount">
                                        @Model.TotalRevenue.ToString("C", pesoCulture)
                                    </div>
                                    <div class="matcha-body-s text-muted">Total payments received (all time)</div>
                                </div>
                                <div class="matcha-card-icon matcha-card-icon-payment">
                                    <i class="bi bi-cash-stack"></i>
                                </div>
                            </div>
                            
                            <!-- Revenue Filter Dropdowns -->
                            <div class="mb-3">
                                <form method="get" class="d-flex gap-2 align-items-end flex-wrap" id="revenueFilterForm">
                                    <div class="flex-grow-1" style="min-width: 200px;">
                                        <label class="matcha-body-s text-muted mb-1 d-block">Filter by Month/Year</label>
                                        <div class="d-flex gap-2 flex-wrap">
                                            <div style="flex: 1; min-width: 120px;">
                                                <select name="revenueMonth" class="form-select form-select-sm w-100" onchange="submitRevenueFilter()">
                                                    <option value="">All Months</option>
                                                    @for (int m = 1; m <= 12; m++)
                                                    {
                                                        var monthName = new DateTime(2000, m, 1).ToString("MMMM");
                                                        <option value="@m" selected="@(Model.RevenueMonth == m)">@monthName</option>
                                                    }
                                                </select>
                                            </div>
                                            <div style="flex: 1; min-width: 100px;">
                                                <select name="revenueYear" class="form-select form-select-sm w-100" onchange="submitRevenueFilter()">
                                                    <option value="">All Years</option>
                                                    @{
                                                        var currentYear = DateTime.Now.Year;
                                                        // Show current year + 5 future years, and 10 past years
                                                        for (int y = currentYear + 5; y >= currentYear - 10; y--)
                                                        {
                                                            <option value="@y" selected="@(Model.RevenueYear == y)">@y</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <!-- Filtered Revenue Display -->
                            @if (Model.RevenueYear.HasValue && Model.RevenueMonth.HasValue)
                            {
                                var selectedMonthName = new DateTime(Model.RevenueYear.Value, Model.RevenueMonth.Value, 1).ToString("MMMM yyyy");
                                <div class="border-top pt-3">
                                    <div class="matcha-body-s text-muted text-uppercase mb-1">Revenue for @selectedMonthName</div>
                                    <div class="matcha-amount" style="font-size: 1.5rem;">
                                        @Model.FilteredRevenue.ToString("C", pesoCulture)
                                    </div>
                                    <div class="matcha-body-s text-muted">Payments received in this period</div>
                                </div>
                            }
                        </div>
                    </article>
                </div>
            </div>
        </section>

        <!-- Portfolio Calendar + Payment Audit -->
        <section class="matcha-section mb-4">
            <div class="row g-4">
                <!-- Admin Rent & Events Calendar -->
                <div class="col-lg-8">
                    <article class="matcha-card h-100">
                        <header class="matcha-card-header d-flex justify-content-between align-items-center">
                            <div>
                                <h2 class="matcha-card-title">Portfolio Rent Calendar</h2>
                                <p class="matcha-body-s text-muted mb-0">
                                    Shows when rent is due or overdue across all units this month.
                                </p>
                            </div>
                            <div class="matcha-calendar-legend matcha-body-s">
                                <span class="legend-item">
                                    <span class="dot rent-due"></span> Rent Due
                                </span>
                                <span class="legend-item">
                                    <span class="dot overdue"></span> Overdue
                                </span>
                            </div>
                        </header>

                        <div class="matcha-card-body">
                            @{
                                var monthDate = new DateTime(Model.CalendarYear, Model.CalendarMonth, 1);
                                var today = DateTime.Today;
                                var startOfMonth = monthDate;
                                var daysInMonth = DateTime.DaysInMonth(monthDate.Year, monthDate.Month);
                            }
                            <div class="matcha-calendar">
                                <div class="matcha-calendar-header d-flex justify-content-between align-items-center mb-3">
                                    <div class="matcha-h3 mb-0">
                                        @monthDate.ToString("MMMM yyyy")
                                    </div>
                                    @{
                                        var prevMonth = monthDate.AddMonths(-1);
                                        var nextMonth = monthDate.AddMonths(1);
                                    }
                                    <div class="d-flex align-items-center gap-2">
                                        <a asp-page="/Admin/AdminDashboard"
                                           asp-route-year="@prevMonth.Year"
                                           asp-route-month="@prevMonth.Month"
                                           asp-route-revenueYear="@(Model.RevenueYear)"
                                           asp-route-revenueMonth="@(Model.RevenueMonth)"
                                           class="matcha-btn-secondary matcha-btn-compact">
                                            ‹ Prev
                                        </a>
                                        <a asp-page="/Admin/AdminDashboard"
                                           asp-route-year="@nextMonth.Year"
                                           asp-route-month="@nextMonth.Month"
                                           asp-route-revenueYear="@(Model.RevenueYear)"
                                           asp-route-revenueMonth="@(Model.RevenueMonth)"
                                           class="matcha-btn-secondary matcha-btn-compact">
                                            Next ›
                                        </a>
                                    </div>
                                </div>

                                <div class="matcha-calendar-grid">
                                    <div class="matcha-calendar-weekday">Sun</div>
                                    <div class="matcha-calendar-weekday">Mon</div>
                                    <div class="matcha-calendar-weekday">Tue</div>
                                    <div class="matcha-calendar-weekday">Wed</div>
                                    <div class="matcha-calendar-weekday">Thu</div>
                                    <div class="matcha-calendar-weekday">Fri</div>
                                    <div class="matcha-calendar-weekday">Sat</div>

                                    @{
                                        var firstDayOfWeek = (int)startOfMonth.DayOfWeek;
                                        for (int i = 0; i < firstDayOfWeek; i++)
                                        {
                                            <div class="matcha-calendar-cell empty"></div>
                                        }
                                        for (int day = 1; day <= daysInMonth; day++)
                                        {
                                            var date = new DateTime(monthDate.Year, monthDate.Month, day);
                                            var isToday = date.Date == today.Date;
                                            var isRentDueDay = Model.RentDueDates.Contains(date.Date);
                                            var isOverdueDay = Model.OverdueRentDates.Contains(date.Date);

                                            var cellClasses = "matcha-calendar-cell";
                                            if (isToday)
                                            {
                                                cellClasses += " today";
                                            }
                                            if (isRentDueDay)
                                            {
                                                cellClasses += " has-rent-due";
                                            }
                                            if (isOverdueDay)
                                            {
                                                cellClasses += " has-overdue";
                                            }

                                            <div class="@cellClasses">
                                                <div class="day-number">@day</div>
                                                <div class="matcha-calendar-markers">
                                                    @if (isRentDueDay)
                                                    {
                                                        <span class="dot rent-due" title="Rent due"></span>
                                                    }
                                                    @if (isOverdueDay)
                                                    {
                                                        <span class="dot overdue" title="Overdue rent"></span>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </article>
                </div>

                <!-- Right Column: Payment Audit + Core Management Actions -->
                <div class="col-lg-4">
                    <div class="d-flex flex-column gap-4 h-100">
                        <!-- Payment Audit Card -->
                        <article class="matcha-card">
                            <header class="matcha-card-header d-flex justify-content-between align-items-center">
                                <div>
                                    <h2 class="matcha-card-title mb-0">Recent Payments Audit</h2>
                                    <p class="matcha-body-s text-muted mb-0">
                                        Latest 3 confirmed payments across all tenants.
                                    </p>
                                </div>
                            </header>
                            <div class="matcha-card-body">
                                @if (Model.RecentPayments != null && Model.RecentPayments.Any())
                                {
                                    <div class="matcha-table">
                                        <div class="matcha-table-header">
                                            <div>Tenant</div>
                                            <div class="text-end matcha-mono">Amount</div>
                                            <div class="text-end">Date</div>
                                        </div>
                                        @foreach (var p in Model.RecentPayments)
                                        {
                                            <div class="matcha-table-row">
                                                <div>
                                                    <div class="matcha-list-label">@p.TenantName</div>
                                                    @if (!string.IsNullOrWhiteSpace(p.UnitNumber))
                                                    {
                                                        <div class="matcha-body-s text-muted">Unit @p.UnitNumber</div>
                                                    }
                                                </div>
                                                <div class="text-end matcha-mono">
                                                    @p.Amount.ToString("C", pesoCulture)
                                                </div>
                                                <div class="text-end matcha-body-s">
                                                    @p.Date.ToString("MMM dd, yyyy")
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="matcha-body-s text-muted mb-0">
                                        No recent payments to display.
                                    </p>
                                }
                            </div>
                        </article>

                        <!-- Compact Core Management Actions -->
                        <article class="matcha-card matcha-card-soft flex-grow-1">
                            <header class="matcha-card-header d-flex justify-content-between align-items-center">
                                <h2 class="matcha-card-title mb-0">Core Management Actions</h2>
                            </header>
                            <div class="matcha-card-body">
                                <div class="d-grid gap-2">
                                    <a asp-page="/Admin/ManageTenants" class="matcha-btn-primary w-100 text-center">
                                        Manage Tenants
                                    </a>
                                    <a asp-page="/Admin/ManageApartments" class="matcha-btn-secondary w-100 text-center">
                                        Manage Units
                                    </a>
                                    <a asp-page="/Admin/GenerateBills" class="matcha-btn-secondary w-100 text-center">
                                        Generate Bills
                                    </a>
                                    <a asp-page="/Admin/RecordPayments" class="matcha-btn-secondary w-100 text-center">
                                        Record Payments
                                    </a>
                                    <a asp-page="/Admin/BillingSummary" class="matcha-btn-secondary w-100 text-center">
                                        View Reports
                                    </a>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<style>
    /* Revenue Filter Form Selects - Matcha Design */
    #revenueFilterForm .form-select {
        border: 1px solid #E7E5D8;
        border-radius: 8px;
        background-color: #FFFFFF;
        color: #2C2C2C;
        font-family: "Inter", "Nunito", Arial, sans-serif;
        font-size: 14px;
        padding: 8px 12px;
        transition: all 0.2s ease;
    }
    
    #revenueFilterForm .form-select:focus {
        border-color: #4A6F47;
        box-shadow: 0 0 0 2px rgba(74, 111, 71, 0.15);
        outline: none;
    }
    
    #revenueFilterForm .form-select:hover {
        border-color: #A8C3A0;
    }

    /* Responsive Design - Similar to BillingSummary */
    @@media (max-width: 768px) {
        #revenueFilterForm {
            flex-direction: column;
            align-items: stretch !important;
        }
        
        #revenueFilterForm > div {
            width: 100%;
            min-width: 100%;
        }
        
        #revenueFilterForm .d-flex.gap-2 {
            flex-direction: column;
        }
        
        #revenueFilterForm .d-flex.gap-2 > div {
            width: 100%;
            min-width: 100%;
        }
        
        #revenueFilterForm .form-select {
            width: 100% !important;
        }
    }

    @@media (max-width: 576px) {
        .matcha-card-accent .matcha-card-body {
            padding: 12px 16px 16px 16px;
        }
        
        .matcha-amount {
            font-size: 20px;
        }
        
        #revenueFilterForm label {
            font-size: 12px;
        }
    }
</style>

<script>
    function submitRevenueFilter() {
        const form = document.getElementById('revenueFilterForm');
        const formData = new FormData(form);
        const params = new URLSearchParams();
        
        // Preserve current calendar month/year from URL if they exist
        const urlParams = new URLSearchParams(window.location.search);
        const currentYear = urlParams.get('year');
        const currentMonth = urlParams.get('month');
        
        if (currentYear && currentMonth) {
            params.append('year', currentYear);
            params.append('month', currentMonth);
        }
        
        // Add revenue filter parameters
        const revenueMonth = formData.get('revenueMonth');
        const revenueYear = formData.get('revenueYear');
        
        if (revenueMonth) {
            params.append('revenueMonth', revenueMonth);
        }
        if (revenueYear) {
            params.append('revenueYear', revenueYear);
        }
        
        // Navigate with preserved calendar and revenue filter parameters
        window.location.href = window.location.pathname + (params.toString() ? '?' + params.toString() : '');
    }
</script>
