@page "/Admin/AuditLogs"
@model Apartment.Pages.Admin.AuditLogsModel
@{
    ViewData["Title"] = "System Audit Logs";
    Layout = "_Layout";
}

<div class="d-flex">
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content -->
    <div class="main-content" style="margin-left: 280px; width: calc(100% - 280px); padding: 2rem;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-0">System Audit Logs</h1>
                <p class="text-muted mb-0">A chronological record of significant events in the system.</p>
            </div>
            <form method="post">
                <button type="submit" asp-page-handler="ExportExcel" class="btn btn-sm btn-outline-primary" data-file-download="true">
                    <i class="fas fa-file-excel"></i> Export to Excel
                </button>
                <button type="submit" asp-page-handler="ExportPdf" class="btn btn-sm btn-outline-danger" data-file-download="true">
                    <i class="fas fa-file-pdf"></i> Export to PDF
                </button>
            </form>
        </div>

        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">Recent Activity</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Timestamp</th>
                                <th>User</th>
                                <th>Action</th>
                                <th>Details</th>
                                <th>IP Address</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.AuditLogs != null)
                            {
                                @foreach (var log in Model.AuditLogs)
                                {
                                    <tr>
                                        <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>@(log.User?.Username ?? "System")</td>
                                        <td>@log.Action</td>
                                        <td>@log.Details</td>
                                        <td>@log.IpAddress</td>
                                        <td>
                                            @if (log.Success)
                                            {
                                                <span class="badge bg-success">Success</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Failure</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .main-content {
        min-height: 100vh;
        background: #f8f9fa;
    }
</style>