@page "/Admin/BillingSummary"
@model Apartment.Pages.Admin.BillingSummaryModel
@using System.Globalization
@using System.Linq
@using System.Text.Json
@{
    ViewData["Title"] = "Billing Summary";
    Layout = "_Layout";
    var pesoCulture = CultureInfo.CreateSpecificCulture("en-PH");
    var trendLabels = JsonSerializer.Serialize(Model.Summary.RevenueTrend.Select(t => t.Label));
    var trendBilled = JsonSerializer.Serialize(Model.Summary.RevenueTrend.Select(t => t.Billed));
    var trendCollected = JsonSerializer.Serialize(Model.Summary.RevenueTrend.Select(t => t.Collected));
    var hasTrendData = Model.Summary.RevenueTrend.Any();
}

<div class="matcha-dashboard d-flex">
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content -->
    <div class="matcha-main">
        <!-- Page Header -->
        <header class="matcha-header d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <h1 class="matcha-h1 mb-1">Billing Summary</h1>
                <p class="matcha-subtitle mb-0">High-level performance overview for @Model.Summary.PeriodLabel.</p>
            </div>
            <form method="get" class="d-flex gap-3 flex-wrap align-items-end">
                <div>
                    <label asp-for="SelectedPeriodKey" class="form-label small text-muted mb-1">Billing Period</label>
                    <select asp-for="SelectedPeriodKey" asp-items="Model.PeriodOptions" class="form-select">
                    </select>
                </div>
                <div>
                    <label asp-for="SelectedApartmentId" class="form-label small text-muted mb-1">Apartment</label>
                    <select asp-for="SelectedApartmentId" asp-items="Model.ApartmentOptions" class="form-select">
                    </select>
                </div>
                <div class="align-self-end">
                    <button type="submit" class="matcha-btn-primary">
                        <i class="bi bi-filter me-2"></i>Apply
                    </button>
                </div>
                <div class="align-self-end">
                    <a class="matcha-btn-secondary"
                       asp-page-handler="Export"
                       asp-route-SelectedPeriodKey="@Model.SelectedPeriodKey"
                       asp-route-SelectedApartmentId="@Model.SelectedApartmentId">
                        <i class="bi bi-download me-2"></i>Export Excel
                    </a>
                </div>
            </form>
        </header>

        <!-- KPI Cards -->
        <section class="matcha-section mb-4">
            <div class="row g-4">
                <div class="col-xl-3 col-md-6">
                    <article class="matcha-card h-100">
                        <div class="matcha-card-body">
                            <p class="matcha-body-s text-muted text-uppercase mb-1">Total Billed</p>
                            <div class="matcha-amount">@Model.Summary.TotalBilled.ToString("C", pesoCulture)</div>
                            <p class="matcha-body-s text-muted mb-0">Invoices issued for selected scope</p>
                        </div>
                    </article>
                </div>
                <div class="col-xl-3 col-md-6">
                    <article class="matcha-card h-100">
                        <div class="matcha-card-body">
                            <p class="matcha-body-s text-muted text-uppercase mb-1">Collected</p>
                            <div class="matcha-amount text-success">@Model.Summary.TotalCollected.ToString("C", pesoCulture)</div>
                            <p class="matcha-body-s text-muted mb-0">Payments received</p>
                        </div>
                    </article>
                </div>
                <div class="col-xl-3 col-md-6">
                    <article class="matcha-card h-100">
                        <div class="matcha-card-body">
                            <p class="matcha-body-s text-muted text-uppercase mb-1">Outstanding</p>
                            <div class="matcha-amount text-danger">@Model.Summary.TotalOutstanding.ToString("C", pesoCulture)</div>
                            <p class="matcha-body-s text-muted mb-0">Still to be collected</p>
                        </div>
                    </article>
                </div>
                <div class="col-xl-3 col-md-6">
                    <article class="matcha-card h-100">
                        <div class="matcha-card-body">
                            <p class="matcha-body-s text-muted text-uppercase mb-1">Collection Efficiency</p>
                            <div class="matcha-amount">@Model.Summary.CollectionEfficiency.ToString("0.##")%</div>
                            <p class="matcha-body-s mb-0 @(Model.Summary.MonthOverMonthChange >= 0 ? "text-success" : "text-danger")">
                                MoM change: @Model.Summary.MonthOverMonthChange.ToString("0.##")%
                            </p>
                        </div>
                    </article>
                </div>
            </div>
        </section>

        <!-- Charts -->
        <section class="matcha-section mb-4">
            <div class="row g-4">
                <div class="col-xl-12">
                    <article class="matcha-card h-100">
                        <header class="matcha-card-header d-flex justify-content-between align-items-center">
                            <div>
                                <h2 class="matcha-card-title mb-0">Revenue Trend</h2>
                                <p class="matcha-body-s text-muted mb-0">Billed vs. collected over time.</p>
                            </div>
                        </header>
                        <div class="matcha-card-body">
                            @if (hasTrendData)
                            {
                                <div class="chart-wrapper">
                                    <canvas id="trendChart"></canvas>
                                </div>
                            }
                            else
                            {
                                <p class="matcha-body-s text-muted mb-0">No billing data for this selection.</p>
                            }
                        </div>
                    </article>
                </div>
            </div>
        </section>

        <!-- Tables -->
        <section class="matcha-section">
            <div class="row g-4">
                <div class="col-lg-6">
                    <article class="matcha-card h-100">
                        <div class="matcha-card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h2 class="matcha-card-title mb-0">Portfolio Health</h2>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <div>
                                    <p class="matcha-body-s text-muted mb-1">Occupied Units</p>
                                    <div class="matcha-amount">@Model.Summary.OccupiedUnits</div>
                                </div>
                                <div>
                                    <p class="matcha-body-s text-muted mb-1">Vacant Units</p>
                                    <div class="matcha-amount">@Model.Summary.VacantUnits</div>
                                </div>
                            </div>
                            <p class="matcha-body-s text-muted mb-0">Track vacancies to anticipate revenue dips.</p>
                        </div>
                    </article>
                </div>

                <div class="col-lg-6">
                    <article class="matcha-card h-100">
                        <div class="matcha-card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h2 class="matcha-card-title mb-0">Top Overdue Tenants</h2>
                                <small class="matcha-body-s text-muted">Highest outstanding balances</small>
                            </div>
                            @if (Model.Summary.TopOverdueTenants.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm align-middle billing-table data-table" id="overdueTable">
                                        <thead class="billing-table-head">
                                            <tr>
                                                <th>Tenant</th>
                                                <th>Unit</th>
                                                <th class="text-end">Outstanding</th>
                                                <th class="text-end">Days</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var tenant in Model.Summary.TopOverdueTenants)
                                            {
                                                <tr>
                                                    <td>@tenant.TenantName</td>
                                                    <td>@tenant.UnitNumber</td>
                                                    <td class="text-end billing-table-money">@tenant.OutstandingAmount.ToString("C", pesoCulture)</td>
                                                    <td class="text-end">@tenant.DaysOverdue</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="matcha-body-s text-muted mb-0">Great news! No overdue balances detected.</p>
                            }
                        </div>
                    </article>
                </div>
            </div>
        </section>
    </div>
</div>

<style>
    .chart-wrapper {
        position: relative;
        height: 320px;
        width: 100%;
    }

    .chart-wrapper canvas {
        width: 100% !important;
        height: 100% !important;
    }

    .chart-wrapper--small {
        height: 260px;
    }

    .billing-table {
        font-size: 0.9rem;
    }

    .billing-table-head {
        background-color: #4A6F47; /* Matcha Deep Green */
        color: #FFFFFF;
    }

    .billing-table-head th {
        font-weight: 600;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        border-bottom: none;
    }

    .billing-table tbody tr:nth-child(even) {
        background-color: #F9F8F3; /* Fresh Cream White */
    }

    .billing-table tbody tr:nth-child(odd) {
        background-color: #FFFFFF;
    }

    .billing-table tbody tr:hover {
        background-color: #E3EDD9;
        transition: background-color 200ms ease-out;
    }

    .billing-table-money {
        font-family: "JetBrains Mono", Consolas, monospace;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const trendLabels = @Html.Raw(trendLabels);
        const trendBilled = @Html.Raw(trendBilled);
        const trendCollected = @Html.Raw(trendCollected);
        if (trendLabels.length > 1) {
            const trendCtx = document.getElementById("trendChart");
            new Chart(trendCtx, {
                type: "line",
                data: {
                    labels: trendLabels,
                    datasets: [
                        {
                            label: "Billed",
                            data: trendBilled,
                            borderColor: "#7aa378",
                            backgroundColor: "rgba(122, 163, 120, 0.1)",
                            tension: 0.4,
                            borderWidth: 2,
                            fill: true
                        },
                        {
                            label: "Collected",
                            data: trendCollected,
                            borderColor: "#9fbf9f",
                            backgroundColor: "rgba(159, 191, 159, 0.1)",
                            tension: 0.4,
                            borderWidth: 2,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }
        else if (trendLabels.length === 1) {
            const trendCtx = document.getElementById("trendChart");
            new Chart(trendCtx, {
                type: "bar",
                data: {
                    labels: ["Billed", "Collected"],
                    datasets: [
                        {
                            data: [trendBilled[0], trendCollected[0]],
                            backgroundColor: ["#0d6efd", "#198754"],
                            borderRadius: 10,
                            maxBarThickness: 80
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }

    });
</script>

