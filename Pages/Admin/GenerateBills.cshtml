@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // DataTable Initialization (existing logic)
            setTimeout(function() {
                const table = document.getElementById('billsTable');
                if (table && typeof jQuery !== 'undefined' && jQuery.fn.DataTable) {
                    if (jQuery.fn.DataTable.isDataTable('#billsTable')) {
                        jQuery('#billsTable').DataTable().destroy();
                    }
                    initDataTable('#billsTable', {
                        pageLength: 10,
                        lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, 'All']],
                        order: [],
                        responsive: true,
                        scrollY: false,
                        paging: true,
                        searching: true,
                        language: {
                            search: 'Search:',
                            lengthMenu: 'Show _MENU_ entries',
                            info: 'Showing _START_ to _END_ of _TOTAL_ entries',
                            infoEmpty: 'No entries to show',
                            infoFiltered: '(filtered from _MAX_ total entries)',
                            zeroRecords: 'No matching records found',
                            paginate: { first: 'First', last: 'Last', next: 'Next', previous: 'Previous' }
                        },
                        columns: [{ orderable: false }, null, { className: "text-end" }, null],
                        dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rt<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                        drawCallback: function() {
                            const wrapper = document.getElementById('billsTable_wrapper');
                            if (wrapper) {
                                wrapper.style.display = 'flex';
                                wrapper.style.flexDirection = 'column';
                                wrapper.style.flex = '1';
                                wrapper.style.minHeight = '0';
                            }
                        }
                    });
                }
            }, 300);

            // Form and Modal Logic
            const form = document.getElementById('generationForm');
            const confirmButton = document.getElementById('confirmGenerateButton');
            const modalEl = document.getElementById('confirmGenerateModal');
            const selectionValidationMessage = document.getElementById('selectionValidationMessage');
            const modalSelectedCount = document.getElementById('modalSelectedCount');
            const dueDateInput = document.getElementById('dueDateInput');
            const dueDatePreview = document.getElementById('dueDatePreview');
            const modalDueDateText = document.getElementById('modalDueDateText');
            const monthSelect = document.querySelector('select[name="Input.Month"]') || document.getElementById('Input_Month');
            const yearInput = document.querySelector('input[name="Input.Year"]') || document.getElementById('Input_Year');

            if (!form || !confirmButton || !modalEl) return;

            // Initialize Flatpickr
            const fp = flatpickr(dueDateInput, {
                dateFormat: "Y-m-d",
                onChange: function(selectedDates, dateStr, instance) {
                    if (dueDatePreview) dueDatePreview.textContent = formatDateDisplay(dateStr);
                    if (modalDueDateText) modalDueDateText.textContent = formatDateDisplay(dateStr);
                }
            });

            // New Sync Logic
            const syncMonthToDueDate = () => {
                if (!monthSelect || !fp) return;
                
                const selectedMonth = parseInt(monthSelect.value) - 1; // 0-indexed for JS Date
                const selectedYear = parseInt(yearInput.value);

                if (isNaN(selectedMonth) || isNaN(selectedYear)) return;

                const currentDay = fp.selectedDates.length > 0 ? fp.selectedDates[0].getDate() : new Date().getDate();
                const daysInMonth = new Date(selectedYear, selectedMonth + 1, 0).getDate();
                const dayToUse = Math.min(currentDay, daysInMonth);

                fp.setDate(new Date(selectedYear, selectedMonth, dayToUse), true); // true to trigger onChange
            };

            if (monthSelect && fp) {
                monthSelect.addEventListener('change', syncMonthToDueDate);
                setTimeout(syncMonthToDueDate, 100); // Sync on page load
            }

            // Existing Form Logic (minor adjustments for Flatpickr)
            const formatDateDisplay = (inputValue) => {
                if (!inputValue) return '—';
                const parsed = new Date(inputValue);
                return Number.isNaN(parsed.getTime()) ? '—' : parsed.toLocaleDateString(undefined, { month: 'short', day: '2-digit', year: 'numeric' });
            };

            const toggleSelectionMessage = (count) => {
                if (selectionValidationMessage) selectionValidationMessage.classList.toggle('d-none', count > 0);
            };

            const updateSelectionState = () => {
                const selectedCount = form.querySelectorAll('input[name="Input.SelectedApartmentIds"]:checked').length;
                toggleSelectionMessage(selectedCount);
                confirmButton.disabled = selectedCount === 0;
                return selectedCount;
            };

            updateSelectionState(); // Initial check

            form.addEventListener('change', (e) => {
                if (e.target && e.target.matches('input[name="Input.SelectedApartmentIds"]')) {
                    updateSelectionState();
                }
            });

            confirmButton.addEventListener('click', (e) => {
                e.preventDefault();
                const selectedCount = updateSelectionState();
                const isValidForm = form.checkValidity();

                if (!isValidForm || selectedCount === 0) {
                    if (!isValidForm) {
                        form.classList.add('was-validated');
                        const firstInvalid = form.querySelector(':invalid');
                        if (firstInvalid) firstInvalid.focus();
                    }
                    return;
                }

                if (modalSelectedCount) modalSelectedCount.textContent = selectedCount.toString();
                if (dueDateInput && modalDueDateText) modalDueDateText.textContent = formatDateDisplay(dueDateInput.value);
                
                const modalInstance = bootstrap.Modal.getOrCreateInstance(modalEl);
                modalInstance.show();
            });

            form.addEventListener('submit', () => {
                if (typeof showLoading !== 'undefined') {
                    showLoading.show('body', 'Generating bills... This may take a moment.');
                }
            });
        })();
    </script>
}

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmGenerateModal" tabindex="-1" aria-labelledby="confirmGenerateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmGenerateModalLabel">Confirm Bill Generation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger no-toast" role="alert">
                    Are you sure you want to generate <strong><span id="modalSelectedCount">@((Model.Input.SelectedApartmentIds != null && Model.Input.SelectedApartmentIds.Count > 0) ? Model.Input.SelectedApartmentIds.Count : (Model.OccupiedApartments != null ? Model.OccupiedApartments.Count : 0))</span></strong> new bills for @(new DateTime(Model.Input.Year, Model.Input.Month, 1).ToString("MMMM yyyy"))?
                </div>
                <p class="mb-0 text-muted">This action will bill the selected occupied units and schedule payment due on <span id="modalDueDateText">@((Model.Input.DueDate.HasValue ? Model.Input.DueDate.Value.ToString("MMM dd, yyyy") : "—"))</span>.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" form="generationForm">Generate Bills Now!</button>
            </div>
        </div>
    </div>
    
