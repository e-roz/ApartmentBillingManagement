@page "/Admin/GenerateBills"
@model Apartment.Pages.Admin.GenerateBillsModel
@using System.Globalization
@{
    ViewData["Title"] = "Generate Monthly Bills";
    Layout = "_Layout";
    var pesoCulture = CultureInfo.CreateSpecificCulture("en-PH");
}

<div class="d-flex matcha-shell">
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content -->
    <div class="main-content generate-bills-main">
        <div class="container-fluid generate-bills-container">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="generate-header card border-0 shadow-sm">
                        <div class="card-body d-flex justify-content-between align-items-start flex-wrap gap-3">
                            <div>
                                <h1 class="generate-title mb-1">
                                    <i class="bi bi-receipt-cutoff me-2"></i>Generate Monthly Bills
                                </h1>
                                <p class="generate-subtitle mb-0">
                                    Choose a payment due date and confirm targeted units with active leases.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    @* Standardized Messages *@
    @{
        ViewData["SuccessMessage"] = Model.SuccessMessage;
        ViewData["ErrorMessage"] = Model.ErrorMessage;
    }
    @await Html.PartialAsync("_MessagePartial")

            <form id="generationForm" method="post" asp-page-handler="Generate" novalidate data-loading="true">
                <!-- Keep year for backend as hidden field -->
                <input asp-for="Input.Year" type="hidden" />

                <div class="row g-4 justify-content-center">
                    <!-- LEFT PANEL: Controls & Due Date -->
                    <div class="col-lg-5">
                        <div class="card shadow-sm border-0 h-100 d-flex flex-column matcha-card">
                            <div class="card-header matcha-card-header text-white">
                                <h5 class="mb-0">Billing Controls</h5>
                            </div>
                            <div class="card-body d-flex flex-column" style="flex: 1;">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                <!-- Form Fields Group -->
                                <div class="form-fields-group">
                                    <div class="mb-3">
                                        <label asp-for="Input.Month" class="form-label fw-semibold">
                                            <i class="bi bi-calendar3 me-1"></i>Billing Month
                                        </label>
                                        <select asp-for="Input.Month" class="form-select">
                                            <option value="1">January</option>
                                            <option value="2">February</option>
                                            <option value="3">March</option>
                                            <option value="4">April</option>
                                            <option value="5">May</option>
                                            <option value="6">June</option>
                                            <option value="7">July</option>
                                            <option value="8">August</option>
                                            <option value="9">September</option>
                                            <option value="10">October</option>
                                            <option value="11">November</option>
                                            <option value="12">December</option>
                                        </select>
                                        <span asp-validation-for="Input.Month" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Input.DueDate" class="form-label fw-semibold">
                                            <i class="bi bi-calendar-event me-1"></i>Payment Due Date
                                        </label>
                                        <input asp-for="Input.DueDate" type="text" class="form-control" id="dueDateInput" required />
                                        <span asp-validation-for="Input.DueDate" class="text-danger small"></span>
                                        <div class="form-text small mt-1">
                                            Tenants will see this as the official deadline for this billing cycle.
                                        </div>
                                    </div>
                                </div>

                                <!-- Helper / Read-only Info -->
                                <div class="matcha-helper-card mb-3">
                                    <div>
                                        <div class="small text-muted text-uppercase">Selected Due Date</div>
                                        <div id="dueDatePreview" class="helper-primary-text">
                                            @((Model.Input.DueDate.HasValue ? Model.Input.DueDate.Value.ToString("MMM dd, yyyy") : "—"))
                                        </div>
                                    </div>
                                    <div class="helper-note small mt-2">
                                        The grace period for late payments depends on each apartment&apos;s lease agreement.
                                    </div>
                                </div>

                                <!-- Reminder -->
                                <div class="matcha-reminder mb-2">
                                    <i class="bi bi-exclamation-circle me-2"></i>
                                    Confirm targeted units on the right before generating bills.
                                </div>

                                <!-- Action Button -->
                                <div class="mt-auto pt-3">
                                    <button id="confirmGenerateButton" type="button" class="btn btn-matcha-primary btn-lg w-100" data-bs-toggle="modal" data-bs-target="#confirmGenerateModal">
                                        <i class="bi bi-check-circle me-2"></i>Confirm &amp; Generate Bills
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- RIGHT PANEL: Targeted Units Preview -->
                    <div class="col-lg-7">
                        <div class="card shadow-sm border-0 h-100 d-flex flex-column matcha-card">
                            <div class="card-header matcha-card-header-light">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-0 generate-panel-title">
                                            Targeted Units Preview
                                        </h5>
                                        <small class="text-muted d-block">
                                            Only units with an active lease are shown.
                                        </small>
                                    </div>
                                    <span class="badge matcha-count-badge">
                                        @((Model.OccupiedApartments != null) ? Model.OccupiedApartments.Count : 0) units
                                    </span>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column" style="flex: 1; min-height: 0;">
                                <div id="billsTable_wrapper" class="d-flex flex-column" style="flex: 1; min-height: 0;">
                                    <table class="table table-hover mb-0 data-table data-table-manual-init generate-table" id="billsTable">
                                        <thead class="generate-table-head">
                                            <tr>
                                                <th scope="col" style="width: 70px;" class="text-center">Select</th>
                                                <th scope="col">Unit Number</th>
                                                <th scope="col" class="text-end">Monthly Rent</th>
                                                <th scope="col">Current Tenant</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.OccupiedApartments != null && Model.OccupiedApartments.Count > 0)
                                            {
                                                foreach (var unit in Model.OccupiedApartments)
                                                {
                                                    <tr>
                                                        <td class="text-center">
                                                            <div class="form-check d-inline-flex justify-content-center">
                                                                <input class="form-check-input" type="checkbox" name="Input.SelectedApartmentIds" value="@unit.Id" @((Model.Input.SelectedApartmentIds == null || Model.Input.SelectedApartmentIds.Contains(unit.Id)) ? "checked=\"checked\"" : string.Empty) />
                                                            </div>
                                                        </td>
                                                        <td>@unit.UnitNumber</td>
                                                        <td class="text-end generate-money">@String.Format(pesoCulture, "{0:C}", unit.MonthlyRent)</td>
                                                        <td>@(string.IsNullOrEmpty(unit.TenantName) ? "N/A" : unit.TenantName)</td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="4" class="text-center text-muted py-4">No occupied units found for billing.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="card-footer matcha-card-footer">
                                <div id="selectionValidationMessage" class="text-danger small d-none">
                                    Please select at least one apartment before continuing.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
    
