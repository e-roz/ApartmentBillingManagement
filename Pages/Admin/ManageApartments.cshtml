@page "/Admin/ManageApartments"
@model Apartment.Pages.Admin.ManageApartmentsModel
@{
    ViewData["Title"] = "Apartment Unit Management";
    Layout = "_Layout";
}

<div class="d-flex matcha-shell">
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content -->
    <div class="main-content apartments-main">
        <div class="container-fluid apartments-container">

            @* Standardized Messages *@
            @{
                ViewData["SuccessMessage"] = Model.SuccessMessage;
                ViewData["ErrorMessage"] = Model.ErrorMessage;
            }
            @await Html.PartialAsync("_MessagePartial")

            <!-- Page Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="apartments-header card border-0 shadow-sm">
                        <div class="card-body d-flex justify-content-between align-items-start flex-wrap gap-3">
                            <div>
                                <h1 class="apartments-title mb-1">
                                    <i class="bi bi-building me-2"></i>Apartment Unit Management
                                </h1>
                                <p class="apartments-subtitle mb-0">
                                    View, create, and update apartment units across your portfolio.
                                </p>
                            </div>
                            <div class="d-flex align-items-center gap-3 flex-wrap">
                                <button type="button"
                                        class="btn btn-matcha-primary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#addApartmentModal">
                                    <i class="bi bi-plus-circle me-2"></i>Add New Unit
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Apartments Table -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card border-0 shadow-sm apartments-table-card">
                        <div class="card-header apartments-table-header py-3 d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title mb-0 text-dark fw-semibold">
                                    <i class="bi bi-list-ul me-2"></i>Apartment Units
                                </h5>
                                <small class="text-muted">
                                    Manage availability and assigned tenants for each unit.
                                </small>
                            </div>
                            <span class="badge apartments-count-badge">
                                @Model.Apartments.Count units
                            </span>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0 data-table apartments-table" id="apartmentsTable">
                                    <thead class="apartments-table-head">
                                        <tr>
                                            <th class="border-0 apartments-th">Unit Number</th>
                                            <th class="border-0 apartments-th">Apartment Type</th>
                                            <th class="border-0 apartments-th">Status</th>
                                            <th class="border-0 apartments-th">Tenant</th>
                                            <th class="border-0 apartments-th text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var apartment in Model.Apartments)
                                        {
                                            <tr>
                                                <td class="align-middle">
                                                    <span class="fw-semibold apartments-unit">@apartment.UnitNumber</span>
                                                </td>
                                                <td class="align-middle">
                                                    @apartment.ApartmentType
                                                </td>
                                                <td class="align-middle">
                                                    @if (apartment.StatusDisplay == "Occupied")
                                                    {
                                                        <span class="badge badge-green">Occupied</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-gray">@apartment.StatusDisplay</span>
                                                    }
                                                </td>
                                                <td class="align-middle">
                                                    @if (string.IsNullOrWhiteSpace(apartment.TenantName))
                                                    {
                                                        <span class="text-muted small">No tenant assigned</span>
                                                    }
                                                    else
                                                    {
                                                        <div class="fw-medium">@apartment.TenantName</div>
                                                    }
                                                </td>
                                                <td class="align-middle text-center">
                                                    <div class="btn-group" role="group">
                                                        <button type="button" class="btn btn-outline-primary btn-sm"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#editApartmentModal"
                                                                data-id="@apartment.Id"
                                                                data-unitnumber="@apartment.UnitNumber">
                                                            <i class="bi bi-pencil-square"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-outline-danger btn-sm"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#deleteApartmentModal"
                                                                data-id="@apartment.Id"
                                                                data-unitnumber="@apartment.UnitNumber">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Apartment Modal -->
<div class="modal fade" id="addApartmentModal" tabindex="-1" aria-labelledby="addApartmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content matcha-modal">
            <div class="modal-header matcha-modal-header text-white">
                <h5 class="modal-title" id="addApartmentModalLabel">
                    <i class="bi bi-plus-circle me-2"></i>Add New Apartment Unit
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="AddApartment">
                <div class="modal-body p-4 matcha-modal-body">
                    <div class="card border-0 shadow-sm matcha-card mb-0">
                        <div class="card-header matcha-card-header text-white">
                            <h6 class="mb-0 fw-semibold">
                                <i class="bi bi-house-door-fill me-2"></i>Apartment Details
                            </h6>
                        </div>
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ApartmentInput.UnitNumber" class="form-label fw-semibold">
                                        <i class="bi bi-hash me-1"></i>Unit Number
                                    </label>
                                    <input asp-for="ApartmentInput.UnitNumber"
                                           class="form-control"
                                           placeholder="e.g., A-101"
                                           required />
                                    <span asp-validation-for="ApartmentInput.UnitNumber" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ApartmentInput.ApartmentType" class="form-label fw-semibold">
                                        <i class="bi bi-building me-1"></i>Apartment Type
                                    </label>
                                    <select asp-for="ApartmentInput.ApartmentType" asp-items="Model.ApartmentTypes" class="form-control"></select>
                                    <span asp-validation-for="ApartmentInput.ApartmentType" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer matcha-modal-footer">
                    <button type="button" class="btn btn-matcha-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-matcha-primary">
                        <i class="bi bi-plus-circle me-2"></i>Add Apartment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Apartment Modal -->
<div class="modal fade" id="editApartmentModal" tabindex="-1" aria-labelledby="editApartmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content matcha-modal">
            <div class="modal-header matcha-modal-header text-white">
                <h5 class="modal-title" id="editApartmentModalLabel">
                    <i class="bi bi-pencil-square me-2"></i>Edit Apartment Unit
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="EditApartment">
                <div class="modal-body p-4 matcha-modal-body">
                    <input type="hidden" id="edit-apartment-id" name="ApartmentId" />

                    <div class="card border-0 shadow-sm matcha-card mb-0">
                        <div class="card-header matcha-card-header text-white">
                            <h6 class="mb-0 fw-semibold">
                                <i class="bi bi-house-door-fill me-2"></i>Apartment Details
                            </h6>
                        </div>
                        <div class="card-body p-3">
                            <div class="row">
                                <!-- Unit Number Field -->
                                <div class="col-md-12 mb-3">
                                    <label for="edit-unitnumber-input" class="form-label fw-semibold">
                                        <i class="bi bi-hash me-1"></i>Unit Number
                                    </label>
                                    <input id="edit-unitnumber-input"
                                           name="UnitNumber"
                                           class="form-control"
                                           placeholder="e.g., A-101"
                                           required />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer matcha-modal-footer">
                    <button type="button" class="btn btn-matcha-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-matcha-primary">
                        <i class="bi bi-check-circle me-2"></i>Update Apartment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Apartment Modal -->
<div class="modal fade" id="deleteApartmentModal" tabindex="-1" aria-labelledby="deleteApartmentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content matcha-danger-modal">
            <div class="modal-header matcha-danger-header text-white">
                <h5 class="modal-title" id="deleteApartmentModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Apartment Unit
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="DeleteApartment">
                <div class="modal-body p-4">
                    <input type="hidden" id="delete-apartment-id" name="ApartmentId" />
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Are you sure you want to delete this apartment unit?</h5>
                        <p class="text-muted">This action cannot be undone. All associated billing records will also be removed.</p>
                        <div class="alert alert-warning no-toast">
                            <strong>Unit:</strong> <span id="delete-unit-number" class="fw-semibold"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer matcha-modal-footer">
                    <button type="button" class="btn btn-matcha-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-matcha-danger">
                        <i class="bi bi-trash me-2"></i>Delete Apartment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh list when clearing the search box
        (function() {
            var input = document.getElementById('apartment-search-input');
            var form = document.getElementById('apartment-search-form');
            if (input && form) {
                input.addEventListener('input', function() {
                    if (this.value === '') {
                        // navigate to page without query to show full list
                        window.location.href = '@Url.Page(null)';
                    }
                });
            }
        })();

        // Edit Modal Handler
        document.getElementById('editApartmentModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var apartmentId = button.getAttribute('data-id');
            var unitNumber = button.getAttribute('data-unitnumber');

            var modal = event.target;
            modal.querySelector('#edit-apartment-id').value = apartmentId;
            modal.querySelector('#edit-unitnumber-input').value = unitNumber;
        });

        // Delete Modal Handler
        document.getElementById('deleteApartmentModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var apartmentId = button.getAttribute('data-id');
            var unitNumber = button.getAttribute('data-unitnumber');

            var modal = event.target;
            modal.querySelector('#delete-apartment-id').value = apartmentId;
            modal.querySelector('#delete-unit-number').textContent = unitNumber;
        });

        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}

