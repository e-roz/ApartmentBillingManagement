@page "/Admin/RecordPayments"
@model Apartment.Pages.Admin.RecordPaymentsModel
@{
    ViewData["Title"] = "Payment Processing";
    Layout = "_Layout";
    var pesoCulture = CultureInfo.CreateSpecificCulture("en-PH");
}

<div class="d-flex">
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content -->
    <div class="main-content" style="margin-left: 280px; width: calc(100% - 280px); padding: 2rem;">
        <div class="container-fluid">
            <!-- Modern Header Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center gap-3 flex-wrap">
                        <h1 class="display-5 fw-bold text-primary mb-0">
                            <i class="bi bi-cash-stack me-3"></i>Payment Processing
                        </h1>
                    </div>
                </div>
            </div>

            @* Standardized Messages *@
            @{
                ViewData["SuccessMessage"] = Model.SuccessMessage;
                ViewData["ErrorMessage"] = Model.ErrorMessage;
            }
            @await Html.PartialAsync("_MessagePartial")

            <!-- Filters Section -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="card-title mb-0 text-dark fw-semibold">
                        <i class="bi bi-funnel me-2"></i>Filters
                    </h5>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Search Tenant</label>
                            <input type="text" asp-for="SearchTerm" class="form-control" placeholder="Name, Unit, Email..." />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Select Tenant</label>
                            <select asp-for="SelectedTenantUserId" asp-items="Model.TenantOptions" class="form-select">
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Status</label>
                            <select asp-for="FilterStatus" asp-items="Model.StatusOptions" class="form-select">
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Month</label>
                            <select asp-for="FilterMonth" asp-items="Model.MonthOptions" class="form-select">
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search me-1"></i>Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Tenant Payment Summary Panel -->
            @if (Model.SelectedTenantSummary != null)
            {
                <div class="row g-4 mb-4">
                    <div class="col-12">
                        <div class="card shadow-lg border-0">
                            <div class="card-header bg-primary text-white py-3">
                                <h5 class="card-title mb-0">
                                    <i class="bi bi-person-circle me-2"></i>Payment Summary - @Model.SelectedTenantSummary.TenantName
                                </h5>
                            </div>
            <div class="card-body">
                                <div class="row g-4">
                                    <div class="col-md-3">
                                        <div class="text-center p-3 bg-light rounded">
                                            <h6 class="text-muted text-uppercase small mb-2">Total Rent</h6>
                                            <h3 class="mb-0 text-primary fw-bold">@Model.SelectedTenantSummary.TotalRent.ToString("C", pesoCulture)</h3>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-center p-3 bg-light rounded">
                                            <h6 class="text-muted text-uppercase small mb-2">Amount Paid</h6>
                                            <h3 class="mb-0 text-success fw-bold">@Model.SelectedTenantSummary.AmountPaid.ToString("C", pesoCulture)</h3>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-center p-3 bg-light rounded">
                                            <h6 class="text-muted text-uppercase small mb-2">Remaining Balance</h6>
                                            <h3 class="mb-0 text-danger fw-bold">@Model.SelectedTenantSummary.RemainingBalance.ToString("C", pesoCulture)</h3>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-center p-3 bg-light rounded">
                                            <h6 class="text-muted text-uppercase small mb-2">Payment Status</h6>
                                            @{
                                                var statusClass = Model.SelectedTenantSummary.PaymentStatus switch
                                                {
                                                    "Paid" => "bg-success",
                                                    "Unpaid" => "bg-secondary",
                                                    _ => "bg-primary"
                                                };
                                            }
                                            <span class="badge @statusClass fs-6 px-3 py-2">@Model.SelectedTenantSummary.PaymentStatus</span>
                                        </div>
                                    </div>
                                </div>
                                <hr class="my-4" />
                                <div class="row g-4">
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-calendar-check text-primary me-2" style="font-size: 1.5rem;"></i>
                                            <div>
                                                <h6 class="text-muted mb-0 small">Last Settled Date</h6>
                                                <p class="mb-0 fw-semibold">@(Model.SelectedTenantSummary.LastDateFullySettled?.ToString("MMM dd, yyyy") ?? "No payments yet")</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-credit-card text-primary me-2" style="font-size: 1.5rem;"></i>
                                            <div>
                                                <h6 class="text-muted mb-0 small">Latest Payment Method</h6>
                                                <p class="mb-0 fw-semibold">@Model.SelectedTenantSummary.LatestPaymentMethod</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-house-door text-primary me-2" style="font-size: 1.5rem;"></i>
                                            <div>
                                                <h6 class="text-muted mb-0 small">Unit Number</h6>
                                                <p class="mb-0 fw-semibold">@Model.SelectedTenantSummary.UnitNumber</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Monthly Breakdown Table -->
            @if (Model.SelectedTenantUserId.HasValue)
            {
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-header bg-light border-0 py-3">
                        <h5 class="card-title mb-0 text-dark fw-semibold">
                            <i class="bi bi-calendar-month me-2"></i>Monthly Payment Breakdown
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.MonthlyBreakdowns.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-striped mb-0 data-table" id="paymentsTable">
                                    <thead class="table-primary">
                                        <tr>
                                            <th class="fw-semibold">Month</th>
                                            <th class="fw-semibold">Rent Amount</th>
                                            <th class="fw-semibold">Paid Amount</th>
                                            <th class="fw-semibold">Remaining Balance</th>
                                            <th class="fw-semibold">Status</th>
                                            <th class="fw-semibold">Date Settled</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var breakdown in Model.MonthlyBreakdowns)
                                        {
                                            var statusClass = breakdown.Status switch
                                            {
                                                "Paid" => "bg-success",
                                                "Unpaid" => "bg-secondary",
                                                _ => "bg-secondary"
                                            };
                                            <tr>
                                                <td class="fw-medium">@breakdown.Month @breakdown.Year</td>
                                                <td class="text-primary fw-semibold">@breakdown.RentAmount.ToString("C", pesoCulture)</td>
                                                <td class="text-success fw-semibold">@breakdown.PaidAmount.ToString("C", pesoCulture)</td>
                                                <td class="text-danger fw-semibold">@breakdown.RemainingBalance.ToString("C", pesoCulture)</td>
                                                <td>
                                                    <span class="badge @statusClass fs-6">@breakdown.Status</span>
                                                </td>
                                                <td>@(breakdown.DateFullySettled?.ToString("MMM dd, yyyy") ?? "—")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-3 mb-0">No payment records found for the selected filters.</p>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <!-- Tenant List (when no tenant selected) -->
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-header bg-light border-0 py-3">
                        <h5 class="card-title mb-0 text-dark fw-semibold">
                            <i class="bi bi-list-ul me-2"></i>Tenants (@Model.TenantSummaries.Count)
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.TenantSummaries.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-striped mb-0 data-table" id="paymentsTable">
                                    <thead class="table-primary">
                                        <tr>
                                            <th class="fw-semibold">Tenant Name</th>
                                            <th class="fw-semibold">Unit Number</th>
                                            <th class="fw-semibold">Monthly Rent</th>
                                            <th class="fw-semibold">Total Paid</th>
                                            <th class="fw-semibold">Remaining Balance</th>
                                            <th class="fw-semibold">Status</th>
                                            <th class="fw-semibold">Last Settled</th>
                                            <th class="fw-semibold text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var summary in Model.TenantSummaries)
                                        {
                                            var statusClass = summary.PaymentStatus switch
                                            {
                                                "Paid" => "bg-success",
                                                "Unpaid" => "bg-secondary",
                                                _ => "bg-info"
                                            };
                                            <tr>
                                                <td class="fw-medium">@summary.TenantName</td>
                                                <td><span class="badge bg-primary">@summary.UnitNumber</span></td>
                                                <td class="text-primary fw-semibold">@summary.MonthlyRent.ToString("C", pesoCulture)</td>
                                                <td class="text-success fw-semibold">@summary.TotalPaid.ToString("C", pesoCulture)</td>
                                                <td class="text-danger fw-semibold">@summary.RemainingBalance.ToString("C", pesoCulture)</td>
                                                <td>
                                                    <span class="badge @statusClass fs-6">@summary.PaymentStatus</span>
                                                </td>
                                                <td>@(summary.LastDateFullySettled?.ToString("MMM dd, yyyy") ?? "—")</td>
                                                <td class="text-center">
                                                    <a asp-page="/Admin/RecordPayments" asp-route-SelectedTenantUserId="@summary.TenantId" class="btn btn-outline-primary btn-sm">
                                                        <i class="bi bi-eye me-1"></i>View Details
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-3 mb-0">No tenants found matching your filters.</p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
