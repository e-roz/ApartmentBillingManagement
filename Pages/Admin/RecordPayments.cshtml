@page "/Admin/RecordPayments"
@model Apartment.Pages.Admin.RecordPaymentsModel
@{
    ViewData["Title"] = "Payment Processing";
    Layout = "_Layout";
    var pesoCulture = CultureInfo.CreateSpecificCulture("en-PH");
}

<div class="d-flex">
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content -->
    <div class="main-content" style="margin-left: 280px; width: calc(100% - 280px); padding: 2rem;">
        <div class="container-fluid">
            <!-- Modern Header Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center gap-3 flex-wrap">
                        <h1 class="display-5 fw-bold text-primary mb-0">
                            <i class="bi bi-cash-stack me-3"></i>Payment Processing
                        </h1>
                        @if (Model.SelectedTenantUserId.HasValue)
                        {
                            <button type="button" class="btn btn-success btn-lg shadow-sm" data-bs-toggle="modal" data-bs-target="#addPaymentModal">
                                <i class="bi bi-plus-circle me-2"></i>Add Payment
                            </button>
                        }
                    </div>
                </div>
            </div>

            @* Standardized Messages *@
            @{
                ViewData["SuccessMessage"] = Model.SuccessMessage;
                ViewData["ErrorMessage"] = Model.ErrorMessage;
            }
            @await Html.PartialAsync("_MessagePartial")

            <!-- Filters Section -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="card-title mb-0 text-dark fw-semibold">
                        <i class="bi bi-funnel me-2"></i>Filters
                    </h5>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Search Tenant</label>
                            <input type="text" asp-for="SearchTerm" class="form-control" placeholder="Name, Unit, Email..." />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Select Tenant</label>
                            <select asp-for="SelectedTenantUserId" asp-items="Model.TenantOptions" class="form-select">
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Status</label>
                            <select asp-for="FilterStatus" asp-items="Model.StatusOptions" class="form-select">
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Month</label>
                            <select asp-for="FilterMonth" asp-items="Model.MonthOptions" class="form-select">
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search me-1"></i>Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Tenant Payment Summary Panel -->
            @if (Model.SelectedTenantSummary != null)
            {
                <div class="row g-4 mb-4">
                    <div class="col-12">
                        <div class="card shadow-lg border-0">
                            <div class="card-header bg-primary text-white py-3">
                                <h5 class="card-title mb-0">
                                    <i class="bi bi-person-circle me-2"></i>Payment Summary - @Model.SelectedTenantSummary.TenantName
                                </h5>
                            </div>
            <div class="card-body">
                                <div class="row g-4">
                                    <div class="col-md-3">
                                        <div class="text-center p-3 bg-light rounded">
                                            <h6 class="text-muted text-uppercase small mb-2">Total Rent</h6>
                                            <h3 class="mb-0 text-primary fw-bold">@Model.SelectedTenantSummary.TotalRent.ToString("C", pesoCulture)</h3>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-center p-3 bg-light rounded">
                                            <h6 class="text-muted text-uppercase small mb-2">Amount Paid</h6>
                                            <h3 class="mb-0 text-success fw-bold">@Model.SelectedTenantSummary.AmountPaid.ToString("C", pesoCulture)</h3>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-center p-3 bg-light rounded">
                                            <h6 class="text-muted text-uppercase small mb-2">Remaining Balance</h6>
                                            <h3 class="mb-0 text-danger fw-bold">@Model.SelectedTenantSummary.RemainingBalance.ToString("C", pesoCulture)</h3>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-center p-3 bg-light rounded">
                                            <h6 class="text-muted text-uppercase small mb-2">Payment Status</h6>
                                            @{
                                                var statusClass = Model.SelectedTenantSummary.PaymentStatus switch
                                                {
                                                    "Paid" => "bg-success",
                                                    "Partial" => "bg-warning",
                                                    "Unpaid" => "bg-secondary",
                                                    "Overdue" => "bg-danger",
                                                    _ => "bg-info"
                                                };
                                            }
                                            <span class="badge @statusClass fs-6 px-3 py-2">@Model.SelectedTenantSummary.PaymentStatus</span>
                                        </div>
                                    </div>
                                </div>
                                <hr class="my-4" />
                                <div class="row g-4">
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-calendar-check text-primary me-2" style="font-size: 1.5rem;"></i>
                                            <div>
                                                <h6 class="text-muted mb-0 small">Last Settled Date</h6>
                                                <p class="mb-0 fw-semibold">@(Model.SelectedTenantSummary.LastDateFullySettled?.ToString("MMM dd, yyyy") ?? "No payments yet")</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-credit-card text-primary me-2" style="font-size: 1.5rem;"></i>
                                            <div>
                                                <h6 class="text-muted mb-0 small">Latest Payment Method</h6>
                                                <p class="mb-0 fw-semibold">@Model.SelectedTenantSummary.LatestPaymentMethod</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-house-door text-primary me-2" style="font-size: 1.5rem;"></i>
                                            <div>
                                                <h6 class="text-muted mb-0 small">Unit Number</h6>
                                                <p class="mb-0 fw-semibold">@Model.SelectedTenantSummary.UnitNumber</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Monthly Breakdown Table -->
            @if (Model.SelectedTenantUserId.HasValue)
            {
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-header bg-light border-0 py-3">
                        <h5 class="card-title mb-0 text-dark fw-semibold">
                            <i class="bi bi-calendar-month me-2"></i>Monthly Payment Breakdown
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.MonthlyBreakdowns.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-striped mb-0 data-table" id="paymentsTable">
                                    <thead class="table-primary">
                                        <tr>
                                            <th class="fw-semibold">Month</th>
                                            <th class="fw-semibold">Rent Amount</th>
                                            <th class="fw-semibold">Paid Amount</th>
                                            <th class="fw-semibold">Remaining Balance</th>
                                            <th class="fw-semibold">Status</th>
                                            <th class="fw-semibold">Date Settled</th>
                                            <th class="fw-semibold text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var breakdown in Model.MonthlyBreakdowns)
                                        {
                                            var statusClass = breakdown.Status switch
                                            {
                                                "Paid" => "bg-success",
                                                "Partial" => "bg-warning",
                                                "Unpaid" => "bg-secondary",
                                                "Overdue" => "bg-danger",
                                                "Advance" => "bg-info",
                                                _ => "bg-secondary"
                                            };
                                            <tr>
                                                <td class="fw-medium">@breakdown.Month @breakdown.Year</td>
                                                <td class="text-primary fw-semibold">@breakdown.RentAmount.ToString("C", pesoCulture)</td>
                                                <td class="text-success fw-semibold">@breakdown.PaidAmount.ToString("C", pesoCulture)</td>
                                                <td class="text-danger fw-semibold">@breakdown.RemainingBalance.ToString("C", pesoCulture)</td>
                                                <td>
                                                    <span class="badge @statusClass fs-6">@breakdown.Status</span>
                                                </td>
                                                <td>@(breakdown.DateFullySettled?.ToString("MMM dd, yyyy") ?? "—")</td>
                                                <td class="text-center">
                                                    <span class="text-muted small">No actions</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-3 mb-0">No payment records found for the selected filters.</p>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <!-- Tenant List (when no tenant selected) -->
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-header bg-light border-0 py-3">
                        <h5 class="card-title mb-0 text-dark fw-semibold">
                            <i class="bi bi-list-ul me-2"></i>Tenants (@Model.TenantSummaries.Count)
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.TenantSummaries.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-striped mb-0 data-table" id="paymentsTable">
                                    <thead class="table-primary">
                                        <tr>
                                            <th class="fw-semibold">Tenant Name</th>
                                            <th class="fw-semibold">Unit Number</th>
                                            <th class="fw-semibold">Monthly Rent</th>
                                            <th class="fw-semibold">Total Paid</th>
                                            <th class="fw-semibold">Remaining Balance</th>
                                            <th class="fw-semibold">Status</th>
                                            <th class="fw-semibold">Last Settled</th>
                                            <th class="fw-semibold text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var summary in Model.TenantSummaries)
                                        {
                                            var statusClass = summary.PaymentStatus switch
                                            {
                                                "Paid" => "bg-success",
                                                "Partial" => "bg-warning",
                                                "Unpaid" => "bg-secondary",
                                                "Overdue" => "bg-danger",
                                                _ => "bg-info"
                                            };
                                            <tr>
                                                <td class="fw-medium">@summary.TenantName</td>
                                                <td><span class="badge bg-primary">@summary.UnitNumber</span></td>
                                                <td class="text-primary fw-semibold">@summary.MonthlyRent.ToString("C", pesoCulture)</td>
                                                <td class="text-success fw-semibold">@summary.TotalPaid.ToString("C", pesoCulture)</td>
                                                <td class="text-danger fw-semibold">@summary.RemainingBalance.ToString("C", pesoCulture)</td>
                                                <td>
                                                    <span class="badge @statusClass fs-6">@summary.PaymentStatus</span>
                                                </td>
                                                <td>@(summary.LastDateFullySettled?.ToString("MMM dd, yyyy") ?? "—")</td>
                                                <td class="text-center">
                                                    <a asp-page="/Admin/RecordPayments" asp-route-SelectedTenantUserId="@summary.TenantId" class="btn btn-outline-primary btn-sm">
                                                        <i class="bi bi-eye me-1"></i>View Details
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-3 mb-0">No tenants found matching your filters.</p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Add Payment Modal -->
<div class="modal fade" id="addPaymentModal" tabindex="-1" aria-labelledby="addPaymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="addPaymentModalLabel">
                    <i class="bi bi-plus-circle me-2"></i>Add Manual Payment
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="AddPayment" id="addPaymentForm" data-loading="true">
                <div class="modal-body p-4">
                    <input type="hidden" asp-for="AddPaymentInput.TenantUserId" value="@Model.SelectedTenantUserId" />
                    
                    <div class="mb-3">
                        <label asp-for="AddPaymentInput.BillId" class="form-label fw-semibold">Select Bill (Month)</label>
                        <select asp-for="AddPaymentInput.BillId" class="form-select" id="billSelect" required>
                            <option value="">-- Select Month --</option>
                            <option value="0" id="outstandingBalanceOption">Pay Outstanding Balance (Oldest Unpaid Bill)</option>
                            @if (Model.MonthlyBreakdowns.Any())
                            {
                                @foreach (var breakdown in Model.MonthlyBreakdowns)
                                {
                                    @if (breakdown.RemainingBalance > 0)
                                    {
                                        <option value="@breakdown.BillId" data-remaining="@breakdown.RemainingBalance">
                                            @breakdown.Month @breakdown.Year - Remaining: @breakdown.RemainingBalance.ToString("C", pesoCulture)
                                        </option>
                                    }
                                }
                            }
                            else
                            {
                                <option value="" disabled>No bills available</option>
                            }
                        </select>
                        <span asp-validation-for="AddPaymentInput.BillId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AddPaymentInput.AmountPaid" class="form-label fw-semibold">Amount Paid</label>
                        <div class="input-group">
                            <span class="input-group-text">₱</span>
                            <input type="number" asp-for="AddPaymentInput.AmountPaid" class="form-control" step="0.01" min="0.01" required />
                        </div>
                        <span asp-validation-for="AddPaymentInput.AmountPaid" class="text-danger"></span>
                        <div class="form-text">Maximum: <span id="maxAmount">₱0.00</span></div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AddPaymentInput.DateFullySettled" class="form-label fw-semibold">Payment Date</label>
                        <input type="date" asp-for="AddPaymentInput.DateFullySettled" class="form-control" required />
                        <span asp-validation-for="AddPaymentInput.DateFullySettled" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AddPaymentInput.PaymentMethod" class="form-label fw-semibold">Payment Method</label>
                        <select asp-for="AddPaymentInput.PaymentMethod" class="form-select" required>
                            <option value="Cash">Cash</option>
                            <option value="Bank Transfer">Bank Transfer</option>
                            <option value="Check">Check</option>
                            <option value="Online Payment">Online Payment</option>
                            <option value="Credit Card">Credit Card</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="AddPaymentInput.PaymentMethod" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AddPaymentInput.ReferenceNumber" class="form-label fw-semibold">Reference Number (Optional)</label>
                        <input type="text" asp-for="AddPaymentInput.ReferenceNumber" class="form-control" placeholder="Transaction ID, Check Number, etc." />
                    </div>

                    <div class="mb-3">
                        <label asp-for="AddPaymentInput.Notes" class="form-label fw-semibold">Notes (Optional)</label>
                        <textarea asp-for="AddPaymentInput.Notes" class="form-control" rows="3" placeholder="Additional notes about this payment..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i>Record Payment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        // Success/Error messages are now handled by page-enhancements.js (Toastr)

        // Update max amount when bill is selected
        document.getElementById('billSelect')?.addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const billId = selectedOption.value;
            
            if (billId === '0') {
                // Outstanding balance option selected - use remaining balance from summary
                const outstandingBalance = parseFloat('@(Model.SelectedTenantSummary?.RemainingBalance ?? 0)');
                document.getElementById('maxAmount').textContent = '₱' + outstandingBalance.toFixed(2);
                
                const amountInput = document.getElementById('AddPaymentInput_AmountPaid');
                if (amountInput) {
                    amountInput.max = outstandingBalance;
                    amountInput.value = outstandingBalance > 0 ? outstandingBalance.toFixed(2) : '';
                }
            } else {
                const maxAmount = selectedOption.getAttribute('data-remaining') || '0';
                document.getElementById('maxAmount').textContent = '₱' + parseFloat(maxAmount).toFixed(2);
                
                const amountInput = document.getElementById('AddPaymentInput_AmountPaid');
                if (amountInput) {
                    amountInput.max = maxAmount;
                    amountInput.value = '';
                }
            }
        });

        // Form validation with SweetAlert
        document.getElementById('addPaymentForm')?.addEventListener('submit', function(e) {
            const amount = parseFloat(document.getElementById('AddPaymentInput_AmountPaid').value);
            const maxAmount = parseFloat(document.getElementById('maxAmount').textContent.replace('₱', '').replace(',', ''));

            if (amount <= 0) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Amount',
                    text: 'Payment amount must be greater than zero.'
                });
                return false;
            }

            if (amount > maxAmount) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Amount Exceeds Balance',
                    text: `Payment amount cannot exceed the remaining balance of ${maxAmount.toFixed(2)}.`
                });
                return false;
            }

            const billId = document.getElementById('billSelect').value;
            if (billId === '' || billId === null || billId === undefined) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Missing Required Fields',
                    text: 'Please select a bill (month) or outstanding balance option for this payment.'
                });
                return false;
            }
            
            // billId can be '0' for outstanding balance, which is valid
        });
    </script>
}
