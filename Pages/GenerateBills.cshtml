@page
@model Apartment.Pages.GenerateBillsModel
@{
    ViewData["Title"] = "Generate Monthly Bills";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold">Monthly Bill Generation</h1>
            <p class="text-muted mb-0">Select a month and year to generate bills for all occupied units.</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4 justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Bill Generation</h5>
                </div>
                <div class="card-body">
                    <form id="generationForm" method="post" asp-page-handler="Generate" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Month" class="form-label">Month</label>
                            <select asp-for="Input.Month" class="form-select" required>
                                <option value="1">January</option>
                                <option value="2">February</option>
                                <option value="3">March</option>
                                <option value="4">April</option>
                                <option value="5">May</option>
                                <option value="6">June</option>
                                <option value="7">July</option>
                                <option value="8">August</option>
                                <option value="9">September</option>
                                <option value="10">October</option>
                                <option value="11">November</option>
                                <option value="12">December</option>
                            </select>
                            <span asp-validation-for="Input.Month" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.year" class="form-label">Year</label>
                            <input asp-for="Input.year" type="number" class="form-control" placeholder="e.g., 2025" min="1900" max="2100" step="1" inputmode="numeric" required />
                            <span asp-validation-for="Input.year" class="text-danger"></span>
                        </div>

                        <div class="alert alert-warning" role="alert">
                            <strong>Warning:</strong> This action will generate bills for all occupied units for the selected period.
                        </div>

                        <button type="button" class="btn btn-primary btn-lg w-100" data-bs-toggle="modal" data-bs-target="#confirmGenerateModal">Generate Bills for Selected Period</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Targeted Units Preview</h5>
                        <span class="badge bg-secondary">@((Model.OccupiedApartments != null) ? Model.OccupiedApartments.Count : 0) units</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Unit Number</th>
                                    <th scope="col" class="text-end">Monthly Rent</th>
                                    <th scope="col">Current Tenant</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.OccupiedApartments != null && Model.OccupiedApartments.Count > 0)
                                {
                                    foreach (var unit in Model.OccupiedApartments)
                                    {
                                        <tr>
                                            <td>@unit.UnitNumber</td>
                                            <td class="text-end">@String.Format("{0:C}", unit.MonthlyRent)</td>
                                            <td>@(string.IsNullOrEmpty(unit.TenantName) ? "N/A" : unit.TenantName)</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-4">No occupied units found for billing.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Summary != null)
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-6">
                <div class="card border-info shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Generation Summary</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-6 col-sm-5">Billing Period</dt>
                            <dd class="col-6 col-sm-7">@Model.Summary.PeriodKey</dd>

                            <dt class="col-6 col-sm-5">Units Processed</dt>
                            <dd class="col-6 col-sm-7">@Model.Summary.OccupiedUnits</dd>

                            <dt class="col-6 col-sm-5">Bills Created</dt>
                            <dd class="col-6 col-sm-7">@Model.Summary.BillsCreated</dd>

                            <dt class="col-6 col-sm-5">Total Amount Billed</dt>
                            <dd class="col-6 col-sm-7">@String.Format("{0:C}", Model.Summary.TotalAmountBilled)</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const modalEl = document.getElementById('confirmGenerateModal');
            if (!modalEl) return;
            modalEl.addEventListener('show.bs.modal', function (event) {
                const form = document.getElementById('generationForm');
                if (!form) return;
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                    form.classList.add('was-validated');
                    const firstInvalid = form.querySelector(':invalid');
                    if (firstInvalid) firstInvalid.focus();
                }
            });
        })();
    </script>
}

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmGenerateModal" tabindex="-1" aria-labelledby="confirmGenerateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmGenerateModalLabel">Confirm Bill Generation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" role="alert">
                    <strong>Are you sure?</strong> This will generate bills for all occupied units for the selected period. This action cannot be easily undone.
                </div>
                <p class="mb-0 text-muted">Review the targeted units list before proceeding.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" form="generationForm">Yes, Generate Bills</button>
            </div>
        </div>
    </div>
    
</div>
