@page
@model Apartment.Pages.ManageApartmentsModel
@{
    ViewData["Title"] = "Apartment Unit Management";
}

<div class="container mt-5">
    <!-- Modern Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-5 fw-bold text-primary mb-0">
                    <i class="bi bi-building me-3"></i>Apartment Unit Management
                </h1>
                <button type="button" class="btn btn-success btn-lg shadow-sm" data-bs-toggle="modal" data-bs-target="#addApartmentModal">
                    <i class="bi bi-plus-circle me-2"></i>Add New Unit
                </button>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Modern Table Card -->
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-light border-0 py-3">
            <h5 class="card-title mb-0 text-dark fw-semibold">
                <i class="bi bi-list-ul me-2"></i>Apartment Units (@Model.Apartments.Count)
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th class="fw-semibold">Unit Number</th>
                            <th class="fw-semibold">Monthly Rent</th>
                            <th class="fw-semibold">Status</th>
                            <th class="fw-semibold">Tenant</th>
                            <th class="fw-semibold text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var apartment in Model.Apartments)
                        {
                            <tr>
                                <td class="fw-medium">@apartment.UnitNumber</td>
                                <td class="text-success fw-semibold">$@apartment.MonthlyRent.ToString("N2")</td>
                                <td>
                                    @if (apartment.StatusDisplay == "Occupied")
                                    {
                                        <span class="badge bg-primary fs-6">@apartment.StatusDisplay</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6">@apartment.StatusDisplay</span>
                                    }
                                </td>
                                <td class="text-muted">@apartment.TenantName</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-outline-primary btn-sm" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#editApartmentModal"
                                                data-id="@apartment.Id"
                                                data-unitnumber="@apartment.UnitNumber"
                                                data-monthlyrent="@apartment.MonthlyRent"
                                                data-tenantid="@apartment.TenantId">
                                            <i class="bi bi-pencil-square"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger btn-sm" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteApartmentModal"
                                                data-id="@apartment.Id"
                                                data-unitnumber="@apartment.UnitNumber">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Apartment Modal -->
<div class="modal fade" id="addApartmentModal" tabindex="-1" aria-labelledby="addApartmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="addApartmentModalLabel">
                    <i class="bi bi-plus-circle me-2"></i>Add New Apartment Unit
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="AddApartment">
                <div class="modal-body p-4">
                    <div class="row">
                        <!-- Unit Number Field -->
                        <div class="col-md-6 mb-4">
                            <div class="form-floating">
                                <input asp-for="ApartmentInput.UnitNumber" 
                                       class="form-control" 
                                       placeholder="Unit Number"
                                       required />
                                <label asp-for="ApartmentInput.UnitNumber">
                                    <i class="bi bi-hash me-1"></i>Unit Number
                                </label>
                            </div>
                            <span asp-validation-for="ApartmentInput.UnitNumber" class="text-danger small"></span>
                        </div>

                        <!-- Monthly Rent Field -->
                        <div class="col-md-6 mb-4">
                            <div class="form-floating">
                                <input asp-for="ApartmentInput.MonthlyRent" 
                                       class="form-control" 
                                       placeholder="Monthly Rent"
                                       type="number"
                                       step="0.01"
                                       min="0"
                                       required />
                                <label asp-for="ApartmentInput.MonthlyRent">
                                    <i class="bi bi-currency-dollar me-1"></i>Monthly Rent
                                </label>
                            </div>
                            <span asp-validation-for="ApartmentInput.MonthlyRent" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Tenant Assignment -->
                    <div class="mb-4">
                        <label asp-for="ApartmentInput.TenantId" class="form-label fw-semibold">
                            <i class="bi bi-person me-1"></i>Assign Tenant
                        </label>
                        <select asp-for="ApartmentInput.TenantId" 
                                asp-items="Model.AvailableTenants" 
                                class="form-select">
                        </select>
                        <div class="form-text">Select a tenant or leave as "Vacant" for unoccupied units.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle me-2"></i>Add Apartment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Apartment Modal -->
<div class="modal fade" id="editApartmentModal" tabindex="-1" aria-labelledby="editApartmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="editApartmentModalLabel">
                    <i class="bi bi-pencil-square me-2"></i>Edit Apartment Unit
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="EditApartment">
                <div class="modal-body p-4">
                    <input type="hidden" id="edit-apartment-id" name="ApartmentId" />
                    
                    <div class="row">
                        <!-- Unit Number Field -->
                        <div class="col-md-6 mb-4">
                            <div class="form-floating">
                                <input id="edit-unitnumber-input" 
                                       name="UnitNumber" 
                                       class="form-control" 
                                       placeholder="Unit Number"
                                       required />
                                <label for="edit-unitnumber-input">
                                    <i class="bi bi-hash me-1"></i>Unit Number
                                </label>
                            </div>
                        </div>

                        <!-- Monthly Rent Field -->
                        <div class="col-md-6 mb-4">
                            <div class="form-floating">
                                <input id="edit-monthlyrent-input" 
                                       name="MonthlyRent" 
                                       class="form-control" 
                                       placeholder="Monthly Rent"
                                       type="number"
                                       step="0.01"
                                       min="0"
                                       required />
                                <label for="edit-monthlyrent-input">
                                    <i class="bi bi-currency-dollar me-1"></i>Monthly Rent
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Tenant Assignment -->
                    <div class="mb-4">
                        <label for="edit-tenantid-input" class="form-label fw-semibold">
                            <i class="bi bi-person me-1"></i>Assign Tenant
                        </label>
                        <select id="edit-tenantid-input" 
                                name="TenantId" 
                                asp-items="Model.AvailableTenants" 
                                class="form-select">
                        </select>
                        <div class="form-text">Select a tenant or leave as "Vacant" for unoccupied units.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Update Apartment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Apartment Modal -->
<div class="modal fade" id="deleteApartmentModal" tabindex="-1" aria-labelledby="deleteApartmentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteApartmentModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Apartment Unit
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="DeleteApartment">
                <div class="modal-body p-4">
                    <input type="hidden" id="delete-apartment-id" name="ApartmentId" />
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Are you sure you want to delete this apartment unit?</h5>
                        <p class="text-muted">This action cannot be undone. All associated billing records will also be removed.</p>
                        <div class="alert alert-warning">
                            <strong>Unit:</strong> <span id="delete-unit-number"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Delete Apartment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Edit Modal Handler
        document.getElementById('editApartmentModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var apartmentId = button.getAttribute('data-id');
            var unitNumber = button.getAttribute('data-unitnumber');
            var monthlyRent = button.getAttribute('data-monthlyrent');
            var tenantId = button.getAttribute('data-tenantid');

            var modal = event.target;
            modal.querySelector('#edit-apartment-id').value = apartmentId;
            modal.querySelector('#edit-unitnumber-input').value = unitNumber;
            modal.querySelector('#edit-monthlyrent-input').value = monthlyRent;
            modal.querySelector('#edit-tenantid-input').value = tenantId || '0';
        });

        // Delete Modal Handler
        document.getElementById('deleteApartmentModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var apartmentId = button.getAttribute('data-id');
            var unitNumber = button.getAttribute('data-unitnumber');

            var modal = event.target;
            modal.querySelector('#delete-apartment-id').value = apartmentId;
            modal.querySelector('#delete-unit-number').textContent = unitNumber;
        });

        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}