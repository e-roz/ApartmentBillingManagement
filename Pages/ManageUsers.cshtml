@page
@using Apartment.Model
@model Apartment.Pages.ManageUsersModel
@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-people-fill text-primary me-2"></i>User Management
                    </h2>
                    <p class="text-muted mb-0">Manage system users and their roles</p>
                </div>
                <div class="text-end">
                    <span class="badge bg-primary fs-6">@Model.Users.Count Users</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text" 
                                       class="form-control" 
                                       placeholder="Search by username or email..." 
                                       name="SearchTerm" 
                                       value="@Model.SearchTerm" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search me-1"></i>Search
                                </button>
                                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                {
                                    <a href="/ManageUsers" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-1"></i>Clear
                                    </a>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-table me-2"></i>Users List
                        </h5>
                        <div class="text-muted small">
                            Showing @Model.Users.Count user(s)
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Users.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0">
                                            <i class="bi bi-person me-1"></i>User
                                        </th>
                                        <th class="border-0">
                                            <i class="bi bi-envelope me-1"></i>Email
                                        </th>
                                        <th class="border-0">
                                            <i class="bi bi-shield me-1"></i>Role
                                        </th>
                                        <th class="border-0">
                                            <i class="bi bi-calendar me-1"></i>Created
                                        </th>
                                        <th class="border-0 text-center">
                                            <i class="bi bi-gear me-1"></i>Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td class="align-middle">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                                        <i class="bi bi-person-fill"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-semibold">@user.Username</div>
                                                        <small class="text-muted">ID: @user.Id</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle">
                                                <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@user.Email">
                                                    @user.Email
                                                </span>
                                            </td>
                                            <td class="align-middle">
                                                @{
                                                    var roleClass = user.Role switch
                                                    {
                                                        UserRoles.Admin => "bg-danger",
                                                        UserRoles.Manager => "bg-warning",
                                                        UserRoles.User => "bg-info",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @roleClass">
                                                    <i class="bi bi-shield-check me-1"></i>@user.Role
                                                </span>
                                            </td>
                                            <td class="align-middle">
                                                <div class="text-muted small">
                                                    @user.CreationDate.ToString("MMM dd, yyyy")
                                                </div>
                                                <div class="text-muted small">
                                                    @user.CreationDate.ToString("HH:mm")
                                                </div>
                                            </td>
                                            <td class="align-middle text-center">
                                                <div class="btn-group" role="group">
                                                    @if (user.Role != UserRoles.Admin)
                                                    {
                                                        @if (user.Role == UserRoles.User)
                                                        {
                                                            <form method="post" asp-page-handler="UpdateRole" class="d-inline">
                                                                <input type="hidden" name="userId" value="@user.Id" />
                                                                <input type="hidden" name="newRole" value="Manager" />
                                                                <button type="submit" 
                                                                        class="btn btn-warning btn-sm" 
                                                                        title="Promote to Manager"
                                                                        onclick="return confirm('Are you sure you want to promote @user.Username to Manager?')">
                                                                    <i class="bi bi-arrow-up"></i>
                                                                </button>
                                                            </form>
                                                        }
                                                        else if (user.Role == UserRoles.Manager)
                                                        {
                                                            <form method="post" asp-page-handler="UpdateRole" class="d-inline">
                                                                <input type="hidden" name="userId" value="@user.Id" />
                                                                <input type="hidden" name="newRole" value="User" />
                                                                <button type="submit" 
                                                                        class="btn btn-info btn-sm" 
                                                                        title="Demote to User"
                                                                        onclick="return confirm('Are you sure you want to demote @user.Username to User?')">
                                                                    <i class="bi bi-arrow-down"></i>
                                                                </button>
                                                            </form>
                                                        }

                                                        <form method="post" asp-page-handler="DeleteUser" class="d-inline">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" 
                                                                    class="btn btn-danger btn-sm" 
                                                                    title="Delete User"
                                                                    onclick="return confirm('Are you sure you want to delete user @user.Username? This action cannot be undone!')">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted small">
                                                            <i class="bi bi-shield-check me-1"></i>Admin
                                                        </span>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-person-x display-1 text-muted"></i>
                            <h4 class="text-muted mt-3">No Users Found</h4>
                            <p class="text-muted">
                                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                {
                                    <span>No users match your search criteria.</span>
                                }
                                else
                                {
                                    <span>There are no users in the system.</span>
                                }
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card border-0 bg-primary text-white">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-6"></i>
                    <h5 class="mt-2">@Model.Users.Count</h5>
                    <small>Total Users</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 bg-warning text-white">
                <div class="card-body text-center">
                    <i class="bi bi-shield-check display-6"></i>
                    <h5 class="mt-2">@Model.Users.Count(u => u.Role == UserRoles.Manager)</h5>
                    <small>Managers</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 bg-info text-white">
                <div class="card-body text-center">
                    <i class="bi bi-person display-6"></i>
                    <h5 class="mt-2">@Model.Users.Count(u => u.Role == UserRoles.User)</h5>
                    <small>Regular Users</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 bg-success text-white">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check display-6"></i>
                    <h5 class="mt-2">@Model.Users.Count(u => u.CreationDate.Date == DateTime.Today)</h5>
                    <small>New Today</small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-sm {
        width: 40px;
        height: 40px;
        font-size: 1rem;
    }
    
    .table th {
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .table td {
        vertical-align: middle;
        border-top: 1px solid #f1f3f4;
    }
    
    .btn-group .btn {
        margin: 0 2px;
    }
    
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
</style>
