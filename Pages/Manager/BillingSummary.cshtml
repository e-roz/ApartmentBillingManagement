@page "/Manager/BillingSummary"
@model Apartment.Pages.Manager.BillingSummaryModel
@{
    ViewData["Title"] = "Billing Summary";
    Layout = "_Layout";
}

<div class="d-flex">
    @await Html.PartialAsync("_ManagerSidebar")

    <!-- Main Content -->
    <div class="main-content" style="margin-left: 280px; width: calc(100% - 280px); padding: 2rem;">
        <h1 class="h3 mb-4">Billing Summary</h1>
        <p class="text-muted">Financial overview and reporting.</p>
        
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <p class="text-muted">Billing summary functionality coming soon...</p>
            </div>
        </div>
    </div>
</div>

