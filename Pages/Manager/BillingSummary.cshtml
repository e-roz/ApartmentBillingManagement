@page "/Manager/BillingSummary"
@model Apartment.Pages.Manager.BillingSummaryModel
@using System.Globalization
@using System.Linq
@using System.Text.Json
@{
    ViewData["Title"] = "Billing Summary";
    Layout = "_Layout";
    var pesoCulture = CultureInfo.CreateSpecificCulture("en-PH");
    var trendLabels = JsonSerializer.Serialize(Model.Summary.RevenueTrend.Select(t => t.Label));
    var trendBilled = JsonSerializer.Serialize(Model.Summary.RevenueTrend.Select(t => t.Billed));
    var trendCollected = JsonSerializer.Serialize(Model.Summary.RevenueTrend.Select(t => t.Collected));
    var hasTrendData = Model.Summary.RevenueTrend.Any();
}

<div class="d-flex">
    @await Html.PartialAsync("_ManagerSidebar")

    <!-- Main Content -->
    <div class="main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
            <div>
                <h1 class="h3 mb-1">Billing Summary</h1>
                <p class="text-muted mb-0">High-level performance overview for @Model.Summary.PeriodLabel.</p>
            </div>
            <form method="get" class="d-flex gap-3 flex-wrap align-items-end">
                <div>
                    <label asp-for="SelectedPeriodKey" class="form-label small text-muted mb-1">Billing Period</label>
                    <select asp-for="SelectedPeriodKey" asp-items="Model.PeriodOptions" class="form-select">
                    </select>
                </div>
                <div>
                    <label asp-for="SelectedApartmentId" class="form-label small text-muted mb-1">Apartment</label>
                    <select asp-for="SelectedApartmentId" asp-items="Model.ApartmentOptions" class="form-select">
                    </select>
                </div>
                <div class="align-self-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-filter me-2"></i>Apply
                    </button>
                </div>
                <div class="align-self-end">
                    <a class="btn btn-outline-secondary"
                       asp-page-handler="Export"
                       asp-route-SelectedPeriodKey="@Model.SelectedPeriodKey"
                       asp-route-SelectedApartmentId="@Model.SelectedApartmentId">
                        <i class="bi bi-download me-2"></i>Export Excel
                    </a>
                </div>
            </form>
        </div>

        <!-- KPI Cards -->
        <div class="row g-4 mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <p class="text-muted text-uppercase small mb-1">Total Billed</p>
                        <h3>@Model.Summary.TotalBilled.ToString("C", pesoCulture)</h3>
                        <small class="text-muted">Invoices issued for selected scope</small>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <p class="text-muted text-uppercase small mb-1">Collected</p>
                        <h3 class="text-success">@Model.Summary.TotalCollected.ToString("C", pesoCulture)</h3>
                        <small class="text-muted">Payments received</small>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <p class="text-muted text-uppercase small mb-1">Outstanding</p>
                        <h3 class="text-danger">@Model.Summary.TotalOutstanding.ToString("C", pesoCulture)</h3>
                        <small class="text-muted">Still to be collected</small>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <p class="text-muted text-uppercase small mb-1">Collection Efficiency</p>
                        <h3>@Model.Summary.CollectionEfficiency.ToString("0.##")%</h3>
                        <small class="@(Model.Summary.MonthOverMonthChange >= 0 ? "text-success" : "text-danger")">
                            MoM change: @Model.Summary.MonthOverMonthChange.ToString("0.##")%
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts -->
        <div class="row g-4 mb-4">
            <div class="col-xl-12">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title mb-0">Revenue Trend</h5>
                            <small class="text-muted">Billed vs. collected</small>
                        </div>
                        @if (hasTrendData)
                        {
                            <div class="chart-wrapper">
                                <canvas id="trendChart"></canvas>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No billing data for this selection.</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Tables -->
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title mb-0">Portfolio Health</h5>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <div>
                                <p class="text-muted mb-1">Occupied Units</p>
                                <h4>@Model.Summary.OccupiedUnits</h4>
                            </div>
                            <div>
                                <p class="text-muted mb-1">Vacant Units</p>
                                <h4>@Model.Summary.VacantUnits</h4>
                            </div>
                        </div>
                        <p class="text-muted small mb-0">Track vacancies to anticipate revenue dips.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title mb-0">Top Overdue Tenants</h5>
                            <small class="text-muted">Highest outstanding balances</small>
                        </div>
                        @if (Model.Summary.TopOverdueTenants.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm align-middle">
                                    <thead>
                                        <tr>
                                            <th>Tenant</th>
                                            <th>Unit</th>
                                            <th class="text-end">Outstanding</th>
                                            <th class="text-end">Days</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var tenant in Model.Summary.TopOverdueTenants)
                                        {
                                            <tr>
                                                <td>@tenant.TenantName</td>
                                                <td>@tenant.UnitNumber</td>
                                                <td class="text-end">@tenant.OutstandingAmount.ToString("C", pesoCulture)</td>
                                                <td class="text-end">@tenant.DaysOverdue</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">Great news! No overdue balances detected.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .main-content {
        margin-left: 280px;
        width: calc(100% - 280px);
        background: #f8f9fa;
        min-height: 100vh;
    }

    .chart-wrapper {
        position: relative;
        height: 320px;
    }

    .chart-wrapper--small {
        height: 260px;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const trendLabels = @Html.Raw(trendLabels);
        const trendBilled = @Html.Raw(trendBilled);
        const trendCollected = @Html.Raw(trendCollected);
        if (trendLabels.length > 1) {
            const trendCtx = document.getElementById("trendChart");
            new Chart(trendCtx, {
                type: "line",
                data: {
                    labels: trendLabels,
                    datasets: [
                        {
                            label: "Billed",
                            data: trendBilled,
                            borderColor: "#0d6efd",
                            backgroundColor: "rgba(13, 110, 253, 0.1)",
                            tension: 0.4,
                            borderWidth: 2,
                            fill: true
                        },
                        {
                            label: "Collected",
                            data: trendCollected,
                            borderColor: "#198754",
                            backgroundColor: "rgba(25, 135, 84, 0.1)",
                            tension: 0.4,
                            borderWidth: 2,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }
        else if (trendLabels.length === 1) {
            const trendCtx = document.getElementById("trendChart");
            new Chart(trendCtx, {
                type: "bar",
                data: {
                    labels: ["Billed", "Collected"],
                    datasets: [
                        {
                            data: [trendBilled[0], trendCollected[0]],
                            backgroundColor: ["#0d6efd", "#198754"],
                            borderRadius: 10,
                            maxBarThickness: 80
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }

    });
</script>

