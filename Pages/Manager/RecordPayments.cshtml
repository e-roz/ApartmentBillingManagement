@page "/Manager/RecordPayments"
@model Apartment.Pages.Manager.RecordPaymentsModel
@{
    ViewData["Title"] = "Record Payments";
    Layout = "_Layout";
}

<div class="d-flex">
    @await Html.PartialAsync("_ManagerSidebar")

    <!-- Main Content -->
    <div class="main-content" style="margin-left: 280px; width: calc(100% - 280px); padding: 2rem;">
        <h1 class="h3 mb-4">Record Payments</h1>
        <p class="text-muted">Record and process tenant payments.</p>
        
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <p class="text-muted">Payment recording functionality coming soon...</p>
            </div>
        </div>
    </div>
</div>

