<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Apartment Management</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons CDN for beautiful icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Apartment.styles.css" asp-append-version="true" />
    <style>
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 280px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            z-index: 1000;
            overflow-y: auto;
        }
        
        .sidebar-brand {
            padding: 1.5rem 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .sidebar-brand .logo {
            width: 40px;
            height: 40px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: #667eea;
            font-size: 1.2rem;
        }
        
        .sidebar-brand h4 {
            color: black;
            margin: 0;
            font-weight: 600;
        }
        
        .search-container {
            padding: 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .search-input {
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(0, 0, 0, 0.2);
            color: black;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            width: 100%;
        }
        
        .search-input::placeholder {
            color: rgba(0, 0, 0, 0.6);
        }
        
        .search-input:focus {
            background: white;
            border-color: rgba(0, 0, 0, 0.3);
            color: black;
            box-shadow: none;
        }
        
        .nav-section {
            padding: 1rem 0;
        }
        
        .nav-item {
            margin: 0.25rem 0;
        }
        
        .nav-link {
            color: black !important;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            margin: 0 1rem;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            text-decoration: none;
            font-weight: 500;
        }
        
        .nav-link:hover {
            color: black !important;
            background: rgba(255, 255, 255, 0.3);
        }
        
        .nav-link.active {
            background: rgba(255, 255, 255, 0.5);
            color: black !important;
            font-weight: 600;
        }
        
        .nav-link i {
            margin-right: 0.75rem;
            width: 20px;
            text-align: center;
        }
        
        .section-title {
            color: black;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 0 1.5rem;
            margin-bottom: 0.5rem;
        }
        
        .main-content {
            margin-left: 280px;
            min-height: 100vh;
            background: #f8f9fa;
        }
        
        .content-header {
            background: white;
            padding: 1.5rem 2rem;
            border-bottom: 1px solid #e9ecef;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .content-body {
            padding: 2rem;
        }
        
        .logo-placeholder {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
        }
        
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }
            
            .sidebar.show {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Brand Section -->
        <div class="sidebar-brand">
            <div class="d-flex align-items-center">
                <div class="logo me-3">A</div>
                <h4>Apartment Management</h4>
            </div>
        </div>
        
        <!-- Search Section -->
        <div class="search-container">
            <div class="position-relative">
                <input type="text" class="search-input" placeholder="Search" />
                <i class="bi bi-search position-absolute" style="right: 1rem; top: 50%; transform: translateY(-50%); color: rgba(0, 0, 0, 0.6);"></i>
            </div>
        </div>
        
        <!-- Main Navigation -->
        <div class="nav-section">
            <div class="section-title">Main</div>
            <a href="/AdminDashBoard" class="nav-link active">
                <i class="bi bi-grid-3x3-gap"></i>
                Dashboard
            </a>
            <a href="/ManageUsers" class="nav-link">
                <i class="bi bi-people"></i>
                My Property
            </a>
            <a href="/AuditLogs" class="nav-link">
                <i class="bi bi-bar-chart"></i>
                Analytics
            </a>
            <a href="/SystemTools" class="nav-link">
                <i class="bi bi-arrow-left-right"></i>
                Transactions
            </a>
            <a href="#" class="nav-link">
                <i class="bi bi-wallet2"></i>
                Cashflow
            </a>
            <a href="#" class="nav-link">
                <i class="bi bi-person-lines-fill"></i>
                Customers
            </a>
            <a href="#" class="nav-link">
                <i class="bi bi-chat-dots"></i>
                Messages
            </a>
        </div>
        
        <!-- Help & Support Section -->
        <div class="nav-section">
            <div class="section-title">Help & Support</div>
            <a href="#" class="nav-link">
                <i class="bi bi-question-circle"></i>
                User Guide
            </a>
            <a href="#" class="nav-link">
                <i class="bi bi-chat-square-text"></i>
                FAQ
            </a>
            <a href="#" class="nav-link">
                <i class="bi bi-headphones"></i>
                Help Center
            </a>
        </div>
    </div>
    
    <!-- Main Content -->
    <div class="main-content">
        <!-- Content Header -->
        <div class="content-header">
            <div>
                <h1 class="h3 mb-0">@ViewData["Title"]</h1>
            </div>
            <div class="logo-placeholder">
                <i class="bi bi-building"></i>
            </div>
        </div>
        
        <!-- Content Body -->
        <div class="content-body">
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Apartment - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
