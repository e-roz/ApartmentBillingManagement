@using System.Security.Claims
@{
    var username = User.Identity?.Name ?? "Unknown User";
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value ?? "Manager";
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString() ?? "";
    var isDashboard = currentPage.Contains("ManagerDashboard");
    var isManageTenants = currentPage.Contains("ManageTenants");
    var isManageApartments = currentPage.Contains("ManageApartments");
    var isGenerateBills = currentPage.Contains("GenerateBills");
    var isRecordPayments = currentPage.Contains("RecordPayments");
    var isBillingSummary = currentPage.Contains("BillingSummary");
    
    // Determine if billing section should be expanded
    var isBillingSection = isGenerateBills || isRecordPayments || isBillingSummary;
}

<!-- Mobile Sidebar Overlay -->
<div class="sidebar-overlay d-lg-none" id="sidebarOverlay"></div>

<!-- Sidebar -->
<aside class="sidebar" id="managerSidebar">
    <!-- Brand Section -->
    <div class="sidebar-brand">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <div class="brand-icon me-2">
                    <i class="bi bi-building"></i>
                </div>
                <div>
                    <h5 class="mb-0 fw-bold">Manager Portal</h5>
                    <small class="text-muted opacity-75">Property Management</small>
                </div>
            </div>
            <button class="btn btn-link text-white d-lg-none p-0 sidebar-close" id="sidebarClose" type="button">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
    </div>

    <!-- User Profile Section -->
    <div class="sidebar-profile">
        <div class="d-flex align-items-center px-3 py-3">
            <div class="profile-avatar me-3">
                <div class="avatar-circle">
                    <i class="bi bi-person-fill"></i>
                </div>
                <span class="avatar-status bg-success"></span>
            </div>
            <div class="flex-grow-1 min-w-0">
                <h6 class="mb-0 text-truncate fw-semibold">@username</h6>
                <small class="text-muted d-block text-truncate">@userRole</small>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="sidebar-nav">
        <div class="nav-content">
            <!-- Dashboard -->
            <a asp-page="/Manager/ManagerDashboard" 
               class="nav-item @(isDashboard ? "active" : "")"
               aria-current="@(isDashboard ? "page" : null)">
                <span class="nav-icon">
                    <i class="bi bi-speedometer2"></i>
                </span>
                <span class="nav-label">Dashboard</span>
                @if (isDashboard)
                {
                    <span class="nav-indicator"></span>
                }
            </a>

            <!-- Management Section -->
            <div class="nav-section mt-3">
                <div class="nav-section-header">
                    <small class="text-uppercase">Management</small>
                </div>
                
                <a asp-page="/Manager/ManageTenants" 
                   class="nav-item @(isManageTenants ? "active" : "")"
                   aria-current="@(isManageTenants ? "page" : null)">
                    <span class="nav-icon">
                        <i class="bi bi-person-lines-fill"></i>
                    </span>
                    <span class="nav-label">Tenant Management</span>
                    @if (isManageTenants)
                    {
                        <span class="nav-indicator"></span>
                    }
                </a>

                <a asp-page="/Manager/ManageApartments" 
                   class="nav-item @(isManageApartments ? "active" : "")"
                   aria-current="@(isManageApartments ? "page" : null)">
                    <span class="nav-icon">
                        <i class="bi bi-house-door-fill"></i>
                    </span>
                    <span class="nav-label">Unit Management</span>
                    @if (isManageApartments)
                    {
                        <span class="nav-indicator"></span>
                    }
                </a>
            </div>

            <!-- Billing Section (Collapsible) -->
            <div class="nav-section mt-3">
                <button class="nav-section-toggle" 
                        type="button" 
                        data-bs-toggle="collapse" 
                        data-bs-target="#billingCollapse"
                        aria-expanded="@(isBillingSection ? "true" : "false")"
                        aria-controls="billingCollapse">
                    <div class="d-flex align-items-center w-100">
                        <span class="nav-icon">
                            <i class="bi bi-cash-stack"></i>
                        </span>
                        <span class="nav-label flex-grow-1">Billing & Payments</span>
                        <i class="bi bi-chevron-down collapse-icon"></i>
                    </div>
                </button>
                
                <div class="collapse @(isBillingSection ? "show" : "")" id="billingCollapse">
                    <div class="nav-submenu">
                        <a asp-page="/Manager/GenerateBills" 
                           class="nav-item @(isGenerateBills ? "active" : "")"
                           aria-current="@(isGenerateBills ? "page" : null)">
                            <span class="nav-icon">
                                <i class="bi bi-receipt"></i>
                            </span>
                            <span class="nav-label">Generate Bills</span>
                            @if (isGenerateBills)
                            {
                                <span class="nav-indicator"></span>
                            }
                        </a>

                        <a asp-page="/Manager/RecordPayments" 
                           class="nav-item @(isRecordPayments ? "active" : "")"
                           aria-current="@(isRecordPayments ? "page" : null)">
                            <span class="nav-icon">
                                <i class="bi bi-credit-card"></i>
                            </span>
                            <span class="nav-label">Record Payments</span>
                            @if (isRecordPayments)
                            {
                                <span class="nav-indicator"></span>
                            }
                        </a>

                        <a asp-page="/Manager/BillingSummary" 
                           class="nav-item @(isBillingSummary ? "active" : "")"
                           aria-current="@(isBillingSummary ? "page" : null)">
                            <span class="nav-icon">
                                <i class="bi bi-graph-up"></i>
                            </span>
                            <span class="nav-label">Billing Summary</span>
                            @if (isBillingSummary)
                            {
                                <span class="nav-indicator"></span>
                            }
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sidebar Footer -->
    <div class="sidebar-footer">
        <a href="#" class="nav-item text-danger" data-bs-toggle="modal" data-bs-target="#logoutConfirmModal">
            <span class="nav-icon">
                <i class="bi bi-box-arrow-right"></i>
            </span>
            <span class="nav-label">Logout</span>
        </a>
    </div>
</aside>
