<script>
    document.addEventListener("DOMContentLoaded", function () {
        const methodCards = document.querySelectorAll(".payment-method-card");
        const methodLabel = document.getElementById("selectedMethodLabel");
        const hiddenMethodInput = document.getElementById("selectedPaymentMethod");
        const methodFields = document.querySelectorAll(".method-fields");
        const walletFields = document.querySelector('.method-fields[data-field-type="wallet"]');
        const bankFields = document.querySelector('.method-fields[data-field-type="bank"]');
        const accountDisplay = document.getElementById("accountNumberDisplay");
        const bankAccountLabel = document.getElementById("bankAccountLabel");
        const copyBtn = document.getElementById("copyAccountBtn");
        const form = document.getElementById("paymentForm");

        let activeMethod = null;
        let allowSubmit = false;
        const methodConfig = {
            gcash: { label: "GCash", type: "wallet" },
            maya: { label: "Maya", type: "wallet" },
            bdo: { label: "BDO", type: "bank" },
            metrobank: { label: "Metrobank", type: "bank" },
            landbank: { label: "Landbank", type: "bank" },
            bpi: { label: "BPI", type: "bank" }
        };

        const activateCard = (card) => {
            methodCards.forEach(c => c.classList.remove("active"));
            card.classList.add("active");

            const methodKey = card.dataset.method;
            const details = methodConfig[methodKey];
            activeMethod = details?.type ?? null;
            const label = card.dataset.label ?? details?.label ?? "";
            hiddenMethodInput.value = label;
            methodLabel.textContent = label ? `${label} selected` : "No method selected";

            methodFields.forEach(section => section.classList.remove("active"));
            if (activeMethod === "wallet") {
                walletFields.classList.add("active");
            } else if (activeMethod === "bank") {
                bankFields.classList.add("active");
            }

            const destination = card.dataset.destination || "";
            accountDisplay.value = destination;
            bankAccountLabel.textContent = destination ? `Transfer to ${destination}` : "Select a bank to view details.";
        };

        methodCards.forEach(card => {
            card.addEventListener("click", () => activateCard(card));
        });

        const presetValue = hiddenMethodInput?.value?.trim();
        if (presetValue) {
            const presetCard = Array.from(methodCards).find(c => (c.dataset.label ?? "").toLowerCase() === presetValue.toLowerCase());
            if (presetCard) {
                activateCard(presetCard);
            }
        }

        copyBtn?.addEventListener("click", () => {
            if (!accountDisplay.value) {
                Swal.fire({ icon: "info", title: "No account selected", text: "Select a bank first." });
                return;
            }

            navigator.clipboard.writeText(accountDisplay.value)
                .then(() => Swal.fire({ icon: "success", title: "Copied!", text: "Account number copied to clipboard." }))
                .catch(() => Swal.fire({ icon: "error", title: "Copy failed", text: "Press CTRL+C to copy manually." }));
        });

        form?.addEventListener("submit", (event) => {
            if (allowSubmit) {
                return;
            }

            event.preventDefault();
            const amount = parseFloat(document.getElementById("Input_Amount")?.value || "0");
            const walletPhone = document.getElementById("walletPhone")?.value.trim();
            const bankName = document.getElementById("bankAccountName")?.value.trim();
            const bankNumber = document.getElementById("bankAccountNumber")?.value.trim();

            if (!hiddenMethodInput.value) {
                Swal.fire({ icon: "error", title: "Choose a method", text: "Select a payment method to continue." });
                return;
            }

            if (!amount || amount <= 0) {
                Swal.fire({ icon: "error", title: "Invalid amount", text: "Please enter an amount greater than ₱0.00." });
                return;
            }

            if (activeMethod === "wallet" && !walletPhone) {
                Swal.fire({ icon: "error", title: "Phone required", text: "Enter the phone number linked to your wallet." });
                return;
            }

            if (activeMethod === "bank" && (!bankName || !bankNumber)) {
                Swal.fire({ icon: "error", title: "Bank details missing", text: "Provide both account name and account number." });
                return;
