        --azuki-red: #B35A5A;
        --ink-black: #2C2C2C;
        --leaf-gray: #7B7B7B;
        --tea-mist: #E7E5D8;
        --surface: #ffffff;
        
        /* Spacing (4pt system) */
        --spacing-4: 4px;
        --spacing-8: 8px;
        --spacing-12: 12px;
        --spacing-16: 16px;
        --spacing-20: 20px;
        --spacing-24: 24px;
        --spacing-32: 32px;
        --spacing-40: 40px;
        
