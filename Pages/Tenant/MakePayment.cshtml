@page
@model Apartment.Pages.Tenant.MakePaymentModel
@{
    ViewData["Title"] = "Make a Payment";
    Layout = "_Layout";
    var pesoCulture = CultureInfo.CreateSpecificCulture("en-PH");
}

<div class="d-flex">
    @await Html.PartialAsync("_TenantSidebar")

    <div class="main-content" style="margin-left: 280px; width: calc(100% - 280px); padding: 2rem;">
        <div class="mb-4">
            <h1 class="h3 mb-2">Make a Payment</h1>
            <p class="text-muted mb-0">Submit a payment for your outstanding balance.</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.TenantInfo != null)
        {
            <!-- Outstanding Balance Section -->
            <div class="card border-0 shadow-sm mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-white p-4">
                    <h5 class="card-title mb-2" style="opacity: 0.9;">Outstanding Balance</h5>
                    <h2 class="mb-0 fw-bold">@Model.OutstandingBalance.ToString("C", pesoCulture)</h2>
                </div>
            </div>

            <!-- Payment Form Section -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title mb-4">Payment Form</h5>
                    <form method="post">
                        <div class="mb-4">
                            <label asp-for="Input.BillId" class="form-label fw-semibold">Select Bill (Optional)</label>
                            <select asp-for="Input.BillId" class="form-select form-select-lg">
                                <option value="">Pay Total Outstanding Balance</option>
                                @foreach (var bill in Model.PendingBills)
                                {
                                    <option value="@bill.Id">
                                        @(bill.BillingPeriod != null ? $"{bill.BillingPeriod.MonthName} {bill.BillingPeriod.Year}" : "N/A") - 
                                        @((bill.AmountDue - bill.AmountPaid).ToString("C", pesoCulture)) remaining
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.Amount" class="form-label fw-semibold">Payment Amount</label>
                            <input asp-for="Input.Amount" class="form-control form-control-lg" type="number" step="0.01" min="0.01" placeholder="0.00" required />
                            <span asp-validation-for="Input.Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.PaymentMethod" class="form-label fw-semibold">Payment Method</label>
                            <select asp-for="Input.PaymentMethod" class="form-select form-select-lg">
                                <option value="Credit Card">Credit Card</option>
                                <option value="GCash">GCash</option>
                                <option value="Maya">Maya</option>
                                <option value="Bank Transfer">Bank Transfer</option>
                                <option value="GrabPay">GrabPay</option>
                                <option value="ShopeePay">ShopeePay</option>
                                <option value="Cash">Cash</option>
                            </select>
                        </div>

                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Note:</strong> This is a simulation. In a production environment, this would integrate with a payment gateway.
                        </div>

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-credit-card me-2"></i>Submit Payment
                            </button>
                            <a asp-page="/TenantDashboard" class="btn btn-secondary btn-lg px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                No tenant profile found. Please contact the administrator.
            </div>
        }
    </div>
</div>

<style>
    .main-content {
        min-height: 100vh;
        background: #f8f9fa;
    }
</style>

