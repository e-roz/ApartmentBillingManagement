        gap: var(--spacing-16);
    }

    .upcoming-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--spacing-16);
        border-radius: 12px;
        background: var(--matcha-soft);
        background: rgba(168, 195, 160, 0.15);
        border: 1px solid var(--tea-mist);
    }

    .upcoming-title {
        margin: 0;
        font-weight: 600;
        color: var(--ink-black);
