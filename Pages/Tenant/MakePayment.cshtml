        box-shadow: 0 0 0 2px var(--golden-whisk);
    }

    .modern-alert {
        margin-left: 280px;
        width: calc(100% - 280px);
        border-radius: 16px;
        border: 1px solid var(--tea-mist);
        background: var(--surface);
        box-shadow: var(--shadow-card);
        padding: var(--spacing-20);
    }

    .text-danger {
        color: var(--azuki-red);
    }

