        overflow: hidden;
    }

    .payment-method-card::before {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: 12px;
        border: 2px solid transparent;
        transition: border-color var(--transition-calm);
        pointer-events: none;
    }

    .payment-method-card img {
        width: 48px;
        height: 48px;
        border-radius: 8px;
