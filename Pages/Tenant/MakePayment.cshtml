@page
@model Apartment.Pages.Tenant.MakePaymentModel
@{
    ViewData["Title"] = "Make a Payment";
    Layout = "_Layout";
    var pesoCulture = CultureInfo.CreateSpecificCulture("en-PH");
}

<div class="d-flex">
    @await Html.PartialAsync("_TenantSidebar")

    <div class="main-content">
        <div class="page-heading">
            <div>
                <h1 class="page-title">Make a Payment</h1>
                <p class="page-subtitle">Complete your payment in a few guided steps.</p>
            </div>
            <div class="status-chip">
                <span class="dot"></span>
                Secure Simulation
            </div>
        </div>

        @if (Model.TenantInfo != null)
        {
            <div class="payment-layout">
                <section class="balance-card">
                    <div class="balance-header">
                        <p class="label">Outstanding Balance</p>
                        <span class="pill">Updated just now</span>
                    </div>
                    <h2 class="balance-amount">@Model.OutstandingBalance.ToString("C", pesoCulture)</h2>
                    <p class="balance-note">Settle the full amount or choose a specific bill below.</p>

                    <div class="upcoming-list">
                        <div class="upcoming-item">
                            <div>
                                <p class="upcoming-title">Next Billing Cycle</p>
                                <p class="upcoming-desc">
                                    @((Model.PendingBills?.FirstOrDefault()?.BillingPeriod?.MonthName) ?? "Pending")
                                    @((Model.PendingBills?.FirstOrDefault()?.BillingPeriod?.Year.ToString()) ?? string.Empty)
                                </p>
                            </div>
                            <span class="upcoming-amount">
                                @{
                                    var nextBalance = Model.PendingBills?.FirstOrDefault();
                                    var nextAmount = nextBalance != null ? (nextBalance.AmountDue - nextBalance.AmountPaid) : 0;
                                }
                                @nextAmount.ToString("C", pesoCulture)
                            </span>
                        </div>
                        <div class="upcoming-item">
                            <div>
                                <p class="upcoming-title">Total Pending Bills</p>
                                <p class="upcoming-desc">@((Model.PendingBills?.Count) ?? 0) open invoices</p>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="payment-card">
                    <form id="paymentForm" method="post" novalidate>
                        <input type="hidden" asp-for="Input.PaymentMethod" id="selectedPaymentMethod" />

                        <div class="input-grid">
                            <div class="field-block">
                                <label asp-for="Input.BillId">Select Bill</label>
                                <div class="field-hint">Choose which invoice to pay or cover everything.</div>
                                @{
                                    var pendingBills = Model.PendingBills ?? new List<Apartment.Model.Bill>();
                                }
                                <select asp-for="Input.BillId" class="fancy-select">
                                    <option value="">Pay Total Outstanding Balance</option>
                                    @foreach (var bill in pendingBills)
                                    {
                                        var remaining = bill.AmountDue - bill.AmountPaid;
                                        <option value="@bill.Id">
                                            @(bill.BillingPeriod != null ? $"{bill.BillingPeriod.MonthName} {bill.BillingPeriod.Year}" : "N/A") — @remaining.ToString("C", pesoCulture) due
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="field-block">
                                <label asp-for="Input.Amount">Payment Amount</label>
                                <div class="field-hint">Enter an amount greater than ₱0.00</div>
                                <div class="amount-input">
                                    <span>₱</span>
                                    <input asp-for="Input.Amount" type="number" min="0.01" step="0.01" placeholder="0.00" required />
                                </div>
                                <span asp-validation-for="Input.Amount" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="payment-methods-wrapper">
                            <div class="method-header">
                                <div>
                                    <p class="label">Payment Method</p>
                                    <p class="method-hint">Tap a card to reveal the required fields.</p>
                                </div>
                                <div class="selected-method" id="selectedMethodLabel">No method selected</div>
                            </div>
                            <span asp-validation-for="Input.PaymentMethod" class="text-danger d-block mt-2"></span>

                            <div class="payment-methods" role="list">
                                <button type="button" class="payment-method-card" data-method="gcash" data-label="GCash" data-type="wallet" data-destination="GCASH • 0917 555 0000">
                                    <img src="~/images/gcash-logo.png" alt="GCash icon" />
                                    <div>
                                        <span>GCash</span>
                                        <small>Instant wallet payment</small>
                                    </div>
                                </button>
                                <button type="button" class="payment-method-card" data-method="maya" data-label="Maya" data-type="wallet" data-destination="MAYA • 0999 888 0000">
                                    <img src="~/images/paymaya-logo.png" alt="Maya icon" />
                                    <div>
                                        <span>Maya</span>
                                        <small>Wallet & QR payments</small>
                                    </div>
                                </button>
                                <button type="button" class="payment-method-card" data-method="bdo" data-label="BDO" data-type="bank" data-destination="BDO • 0044 1234 9876">
                                    <img src="~/images/bdo-logo.jpg" alt="BDO icon" />
                                    <div>
                                        <span>BDO</span>
                                        <small>Online / OTC</small>
                                    </div>
                                </button>
                                <button type="button" class="payment-method-card" data-method="metrobank" data-label="Metrobank" data-type="bank" data-destination="Metrobank • 0099 2234 1122">
                                    <img src="~/images/metrobank-image.png" alt="Metrobank icon" />
                                    <div>
                                        <span>Metrobank</span>
                                        <small>Bank transfer</small>
                                    </div>
                                </button>
                                <button type="button" class="payment-method-card" data-method="landbank" data-label="Landbank" data-type="bank" data-destination="Landbank • 0123 4567 1212">
                                    <img src="~/images/landbank-logo.jpg" alt="Landbank icon" />
                                    <div>
                                        <span>Landbank</span>
                                        <small>Gov partner bank</small>
                                    </div>
                                </button>
                                <button type="button" class="payment-method-card" data-method="bpi" data-label="BPI" data-type="bank" data-destination="BPI • 0333 6677 8899">
                                    <img src="~/images/bpi-logo.png" alt="BPI icon" />
                                    <div>
                                        <span>BPI</span>
                                        <small>Digital banking</small>
                                    </div>
                                </button>
                            </div>
                        </div>

                        <div class="dynamic-fields">
                            <div class="method-fields" data-field-type="wallet">
                                <h6>Wallet Details</h6>
                                <div class="field-grid">
                                    <label class="input-label">Phone Number linked to wallet</label>
                                    <input type="tel" id="walletPhone" name="walletPhone" placeholder="09XX XXX XXXX" />
                                </div>
                            </div>

                            <div class="method-fields" data-field-type="bank">
                                <h6>Bank Transfer Details</h6>
                                <div class="field-grid">
                                    <div class="field-block slim">
                                        <label class="input-label">Account Name</label>
                                        <input type="text" id="bankAccountName" name="bankAccountName" placeholder="e.g. Juan Dela Cruz" />
                                    </div>
                                    <div class="field-block slim">
                                        <label class="input-label">Account Number</label>
                                        <input type="text" id="bankAccountNumber" name="bankAccountNumber" placeholder="XXXX XXXX XXXX" />
                                    </div>
                                </div>
                                <div class="copy-card">
                                    <div>
                                        <p class="label">Copy Account Number</p>
                                        <p class="copy-hint" id="bankAccountLabel">Select a bank to view details.</p>
                                    </div>
                                    <div class="copy-box">
                                        <input type="text" id="accountNumberDisplay" readonly value="" />
                                        <button type="button" id="copyAccountBtn">Copy</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="note-banner">
                            <span class="dot"></span>
                            Simulation only — no actual payment will be processed.
                        </div>

                        <div class="action-row">
                            <button type="submit" class="btn primary">Submit Payment</button>
                            <a asp-page="/TenantDashboard" class="btn ghost">Cancel</a>
                        </div>
                    </form>
                </section>
            </div>
        }
        else
        {
            <div class="alert alert-info modern-alert">
                <i class="bi bi-info-circle me-2"></i>
                No tenant profile found. Please contact the administrator.
            </div>
        }
    </div>
</div>

