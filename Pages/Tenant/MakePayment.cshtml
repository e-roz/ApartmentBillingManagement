            flex-direction: column;
        }

        .balance-card {
            flex: 1;
        }
    }

    @@media (max-width: 768px) {
        .main-content {
            margin-left: 0;
            width: 100%;
            padding: var(--spacing-24);
        }

        .page-heading {
            flex-direction: column;
            align-items: flex-start;
        }

        .page-title {
            font-size: 30px;
        }

        .payment-card {
            padding: var(--spacing-24);
        }

        .action-row {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const paymentForm = document.getElementById('paymentForm');
        const submitButton = paymentForm.querySelector('button[type="submit"]');
        const originalButtonText = submitButton.innerHTML;

        const methodCards = document.querySelectorAll(".payment-method-card");
        const hiddenMethodInput = document.getElementById("selectedPaymentMethod");
        const selectedMethodLabel = document.getElementById("selectedMethodLabel");

        const billSelect = document.getElementById('billSelect');
        const amountInput = document.getElementById('Input_Amount');
        const amountTolerance = 0.005;
        
        // Total outstanding balance from server
        const totalOutstandingBalance = parseFloat('@Model.OutstandingBalance.ToString("0.##", System.Globalization.CultureInfo.InvariantCulture)');
        
        // Helper function to format as Philippine Peso
        function formatPeso(amount) {
            return new Intl.NumberFormat('en-PH', { 
                style: 'currency', 
                currency: 'PHP' 
            }).format(amount);
        }
        
        function getRequiredAmount() {
            const selectedOption = billSelect.options[billSelect.selectedIndex];
            if (selectedOption && selectedOption.value) {
                return parseFloat(selectedOption.dataset.remaining) || 0;
            }
            return totalOutstandingBalance;
        }
        
        // Helper function to get a friendly description of what's selected
        function getSelectionDescription() {
            const selectedOption = billSelect.options[billSelect.selectedIndex];
            if (selectedOption && selectedOption.value) {
                return "the selected bill";
            } else {
                return "your total outstanding balance";
            }
        }
        
        // --- Payment Method Selection ---
        const walletFields = document.querySelector('.method-fields[data-field-type="wallet"]');
        const bankFields = document.querySelector('.method-fields[data-field-type="bank"]');
        
        methodCards.forEach(card => {
            card.addEventListener("click", function () {
                // Update active visual state
                methodCards.forEach(c => c.classList.remove("active"));
                this.classList.add("active");

                // Set hidden input value
                const methodName = this.dataset.label;
                const methodType = this.dataset.type; // "wallet" or "bank"
                hiddenMethodInput.value = methodName;
                selectedMethodLabel.textContent = `${methodName} selected`;
                
                // Show/hide appropriate fields based on payment method type
                if (methodType === "wallet") {
                    walletFields.classList.add("active");
                    bankFields.classList.remove("active");
                } else if (methodType === "bank") {
                    bankFields.classList.add("active");
                    walletFields.classList.remove("active");
                }
            });
        });
        
        function syncAmountToSelection() {
            if (!amountInput) {
                return;
            }
            const requiredAmount = getRequiredAmount();
            amountInput.value = requiredAmount > 0 ? requiredAmount.toFixed(2) : '';
        }

        // --- Auto-fill amount when a bill is selected ---
        billSelect.addEventListener('change', syncAmountToSelection);
        syncAmountToSelection();


        // --- Form Submission Logic ---
        paymentForm.addEventListener('submit', function(e) {
            // Client-side validation
            const amount = parseFloat(amountInput.value);
            const paymentMethod = hiddenMethodInput.value.trim();
            const activeMethodCard = document.querySelector('.payment-method-card.active');
            const methodType = activeMethodCard ? activeMethodCard.dataset.type : null;

            if (!paymentMethod) {
                e.preventDefault();
                Swal.fire({
                    icon: 'warning',
                    title: 'Payment Method Required',
                    text: 'Please select a payment method before proceeding.',
                    confirmButtonColor: '#4A6F47'
                });
                return false;
            }

            // Validate wallet-specific fields
            if (methodType === "wallet") {
                const walletNumber = document.getElementById('Input_WalletNumber')?.value.trim();
                if (!walletNumber) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Wallet Number Required',
                        text: 'Please enter your mobile number for wallet payment.',
                        confirmButtonColor: '#4A6F47'
                    });
                    return false;
                }
                if (!/^[0-9]{11}$/.test(walletNumber)) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Invalid Mobile Number',
                        text: 'Please enter a valid 11-digit mobile number (e.g., 09171234567).',
                        confirmButtonColor: '#4A6F47'
                    });
                    return false;
                }
            }

            // Validate bank-specific fields
            if (methodType === "bank") {
                const accountHolderName = document.getElementById('Input_AccountHolderName')?.value.trim();
                const bankAccountNumber = document.getElementById('Input_BankAccountNumber')?.value.trim();
                
                if (!accountHolderName) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Account Holder Name Required',
                        text: 'Please enter the account holder name.',
                        confirmButtonColor: '#4A6F47'
                    });
                    return false;
                }
                
                if (!bankAccountNumber) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Bank Account Number Required',
                        text: 'Please enter your bank account number.',
                        confirmButtonColor: '#4A6F47'
                    });
                    return false;
                }
            }

            if (isNaN(amount) || amount <= 0) {
                e.preventDefault();
                Swal.fire({
                    icon: 'warning',
                    title: 'Invalid Amount',
                    text: 'Please enter a valid payment amount greater than ₱0.00',
                    confirmButtonColor: '#4A6F47'
                });
                return false;
            }
            
            const requiredAmount = getRequiredAmount();
            if (requiredAmount <= 0) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'No Amount Available',
                    text: 'Please select a bill or outstanding balance to pay.',
                    confirmButtonColor: '#4A6F47'
                });
                return false;
            }

            if (Math.abs(amount - requiredAmount) > amountTolerance) {
                e.preventDefault();
                const description = getSelectionDescription();
                Swal.fire({
                    icon: 'error',
                    title: 'Exact Amount Required',
                    html: `Please enter <strong>${formatPeso(requiredAmount)}</strong>, which is the exact amount for ${description}.`,
                    confirmButtonColor: '#4A6F47',
                    confirmButtonText: 'Got it'
                });
                return false;
            }

            // If ALL validation passes, disable the button to prevent multiple submissions
            submitButton.disabled = true;
            submitButton.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...';
            
            // Allow form submission
            return true;
        });

        // --- Reset button on page back/forward ---
        // This handles cases where the user navigates away and then back
        window.addEventListener('pageshow', function() {
            if (submitButton.disabled) {
                submitButton.disabled = false;
                submitButton.innerHTML = originalButtonText;
            }
        });

        // --- Check for success message and show notification ---
        @if (TempData["SuccessMessage"] != null)
        {
            var paymentAmount = TempData["PaymentAmount"]?.ToString() ?? "";
            <text>
            Swal.fire({
                icon: 'success',
                title: 'Payment Successful!',
                html: '<p>Your payment is successful</p>@if (!string.IsNullOrEmpty(paymentAmount)) { <p class="mt-2"><strong>Amount: @paymentAmount</strong></p> }',
                confirmButtonColor: '#4A6F47',
                confirmButtonText: 'View Payment History'
            }).then(() => {
                // Redirect after user clicks OK
                window.location.href = '@Url.Page("/Tenant/PaymentHistory")';
            });
            </text>
        }
    });
</script>

