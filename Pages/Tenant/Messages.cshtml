@page
@model Apartment.Pages.Tenant.MessagesModel
@{
    ViewData["Title"] = "Messages";
    Layout = "_Layout";
}

<div class="d-flex">
    @await Html.PartialAsync("_TenantSidebar")

    <div class="main-content" style="margin-left: 280px; width: calc(100% - 280px); padding: 2rem;">
        <h1 class="h3 mb-4">Messages</h1>
        <p class="text-muted mb-4">Announcements and messages from property management.</p>

        <div class="row mb-4">
            <div class="col-md-8">
                @if (Model.Messages.Any())
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-3">Inbox</h5>
                            <div class="list-group">
                                @foreach (var message in Model.Messages)
                                {
                                    <div class="list-group-item @(!message.IsRead ? "bg-light" : "")">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">
                                                @if (!message.IsRead)
                                                {
                                                    <span class="badge bg-primary me-2">New</span>
                                                }
                                                @message.Subject
                                            </h6>
                                            <small>@message.SentDate.ToString("MM/dd/yyyy")</small>
                                        </div>
                                        <p class="mb-1">@message.Content</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        No messages at this time.
                    </div>
                }
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Contact Information</h5>
                        
                        <div class="mb-3">
                            <h6 class="small text-uppercase text-muted">Building Manager</h6>
                            <p class="mb-1">
                                <strong>Name:</strong> John Smith<br />
                                <strong>Phone:</strong> (555) 123-4567<br />
                                <strong>Email:</strong> manager@apartment.com
                            </p>
                        </div>

                        <div class="mb-3">
                            <h6 class="small text-uppercase text-muted">Emergency Maintenance</h6>
                            <p class="mb-1">
                                <strong>Phone:</strong> (555) 123-4568<br />
                                <small class="text-muted">Available 24/7</small>
                            </p>
                        </div>

                        <div class="alert alert-warning small mb-0">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Note:</strong> Contact information is mocked for demonstration purposes.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .main-content {
        min-height: 100vh;
        background: #f8f9fa;
    }
</style>

