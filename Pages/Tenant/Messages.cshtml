@page "/Tenant/Messages"
@model Apartment.Pages.Tenant.MessagesModel
@{
    ViewData["Title"] = "My Messages";
    Layout = "_Layout";
}

<div class="d-flex">
    @await Html.PartialAsync("_TenantSidebar")

    <!-- Main Content -->
    <div class="main-content" style="margin-left: 280px; width: calc(100% - 280px); padding: 2rem;">
        <div class="container-fluid">
            <!-- Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <h1 class="display-5 fw-bold text-primary mb-0">
                        <i class="bi bi-envelope me-3"></i>My Messages
                    </h1>
                    <p class="text-muted mt-2">View communication from property management regarding your requests and other announcements.</p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <div class="col-lg-12">
                    @if (Model.Messages.Any())
                    {
                        <div class="card shadow-lg rounded-4 border-0 mb-4">
                            <div class="card-header bg-light text-dark py-3">
                                <h5 class="mb-0">
                                    <i class="bi bi-inbox me-2"></i>Inbox
                                </h5>
                            </div>
                            <div class="card-body p-4 message-list">
                                @foreach (var message in Model.Messages)
                                {
                                    <div class="message-item @(!message.IsRead ? "message-unread" : "")">
                                        <div class="d-flex w-100 justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1 fw-semibold message-sender">
                                                    @if (!message.IsRead)
                                                    {
                                                        <span class="badge bg-primary me-2">New</span>
                                                    }
                                                    @{
                                                        var senderName = (message.SenderUserId == Model.CurrentUserId) ? "You" : "Manager";
                                                    }
                                                    @senderName
                                                    @if (message.AssociatedRequestId.HasValue)
                                                    {
                                                        <small class="text-muted">(Request #@message.AssociatedRequestId)</small>
                                                    }
                                                </h6>
                                                <p class="mb-1 message-content">@message.Content</p>
                                            </div>
                                            <div class="text-end">
                                                <small class="text-muted message-timestamp">@message.Timestamp.ToString("MMM dd, yyyy hh:mm tt")</small>
                                                <form method="post" asp-page-handler="Delete" asp-route-messageId="@message.Id" onsubmit="return confirm('Are you sure you want to delete this message?');">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm mt-2" title="Delete Message">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-5">
                            <i class="bi bi-envelope-open fs-1 text-muted"></i>
                            <h4 class="mt-3">No Messages Here</h4>
                            <p class="text-muted">You haven't received any messages yet, or all have been deleted.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .main-content {
        min-height: 100vh;
        background: #f8f9fa;
    }
    .message-list {
        padding: 0;
    }
    .message-item {
        border-bottom: 1px solid #eee;
        padding: 1rem 1.5rem;
        transition: background-color 0.2s ease-in-out;
    }
    .message-item:last-child {
        border-bottom: none;
    }
    .message-item:hover {
        background-color: #f9f9f9;
    }
    .message-unread {
        background-color: #e6f7ff; /* Light blue for unread messages */
    }
    .message-sender {
        color: #007bff; /* Primary color for sender name */
    }
    .message-content {
        white-space: pre-wrap; /* Preserve whitespace and line breaks */
    }
</style>