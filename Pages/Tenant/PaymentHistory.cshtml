@page
@model Apartment.Pages.Tenant.PaymentHistoryModel
@{
    ViewData["Title"] = "Payment History";
    Layout = "_Layout";
    var pesoCulture = CultureInfo.CreateSpecificCulture("en-PH");
}

<div class="d-flex">
    @await Html.PartialAsync("_TenantSidebar")

    <div class="main-content" style="margin-left: 280px; width: calc(100% - 280px); padding: 2rem;">
        <h1 class="h3 mb-4">Payment History</h1>
        <p class="text-muted mb-4">All successful payments made to your account.</p>

        @if (Model.Payments.Any())
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover data-table" id="paymentHistoryTable">
                            <thead>
                                <tr>
                                    <th>Transaction ID</th>
                                    <th>Payment Date</th>
                                    <th>Amount Paid</th>
                                    <th>Payment Method</th>
                                    <th>Invoice Reference</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.Payments)
                                {
                                    <tr>
                                        <td>#@payment.TransactionId</td>
                                        <td>@payment.PaymentDate.ToString("MM/dd/yyyy")</td>
                                        <td class="text-success"><strong>@payment.AmountPaid.ToString("C", pesoCulture)</strong></td>
                                        <td>@payment.PaymentMethod</td>
                                        <td>@payment.InvoiceReference</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="empty-state-card">
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="bi bi-credit-card"></i>
                    </div>
                    <h3 class="empty-state-title">No Payment History</h3>
                    <p class="empty-state-message">
                        You haven't made any payments yet. Payment records will appear here once you complete a transaction.
                    </p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .main-content {
        min-height: 100vh;
        background: #f8f9fa;
    }
</style>

