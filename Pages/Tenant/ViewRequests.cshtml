@page "/Tenant/ViewRequests"
@model Apartment.Pages.Tenant.ViewRequestsModel
@{
    ViewData["Title"] = "My Submitted Requests";
    Layout = "_Layout";
}

<div class="d-flex">
    @await Html.PartialAsync("_TenantSidebar")

    <!-- Main Content -->
    <div class="main-content" style="margin-left: 280px; width: calc(100% - 280px); padding: 2rem;">
        <div class="container-fluid">
            <!-- Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="display-5 fw-bold text-primary mb-0">
                            <i class="bi bi-card-list me-3"></i>My Requests
                        </h1>
                        <a asp-page="/Tenant/SubmitRequest" class="btn btn-success btn-lg shadow-sm">
                            <i class="bi bi-plus-circle me-2"></i>Submit New Request
                        </a>
                    </div>
                </div>
            </div>

            <!-- Success Message -->
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Table Card -->
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="card-title mb-0 text-dark fw-semibold">
                        <i class="bi bi-list-ul me-2"></i>Request History (@Model.RequestList.Count)
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RequestList.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-primary">
                                    <tr>
                                        <th class="fw-semibold">Title</th>
                                        <th class="fw-semibold">Type</th>
                                        <th class="fw-semibold">Status</th>
                                        <th class="fw-semibold">Date Submitted</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.RequestList)
                                    {
                                        <tr>
                                            <td class="fw-medium">@request.Title</td>
                                            <td>
                                                <span class="badge bg-secondary">@request.RequestType</span>
                                            </td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(request.Status)">@request.Status</span>
                                            </td>
                                            <td>@request.DateSubmitted.ToString("MMM dd, yyyy hh:mm tt")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-5">
                            <i class="bi bi-inbox fs-1 text-muted"></i>
                            <h4 class="mt-3">No Requests Found</h4>
                            <p class="text-muted">You have not submitted any requests yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(Apartment.Enums.RequestStatus status)
    {
        return status switch
        {
            Apartment.Enums.RequestStatus.Submitted => "bg-primary",
            Apartment.Enums.RequestStatus.InProgress => "bg-warning text-dark",
            Apartment.Enums.RequestStatus.Completed => "bg-success",
            Apartment.Enums.RequestStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

<style>
    .main-content {
        min-height: 100vh;
        background: #f8f9fa;
    }
</style>
