@page "/Tenant/ViewRequests"
@model Apartment.Pages.Tenant.ViewRequestsModel
@{
    ViewData["Title"] = "My Submitted Requests";
    Layout = "_Layout";
}

<div class="d-flex">
    @await Html.PartialAsync("_TenantSidebar")

    <!-- Main Content -->
    <div class="main-content">
        <div class="page-content-wrapper">

            <!-- Header -->
            <div class="page-header">
                <div>
                    <h1 class="page-title">My Requests</h1>
                    <p class="page-subtitle">A history of all your maintenance and service requests.</p>
                </div>
                <a asp-page="/Tenant/SubmitRequest" class="btn btn-primary-matcha">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/></svg>
                    Submit New Request
                </a>
            </div>

            <!-- Success Message -->
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="matcha-notification is-success">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16"><path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/></svg>
                    <span>@Model.SuccessMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Table Panel -->
            <div class="matcha-panel">
                <div class="table-responsive">
                    @if (Model.RequestList.Any())
                    {
                        <table class="matcha-table">
                            <colgroup>
                                <col style="width: 40%;">
                                <col style="width: 20%;">
                                <col style="width: 15%;">
                                <col style="width: 25%;">
                            </colgroup>
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Date Submitted</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model.RequestList)
                                {
                                    <tr>
                                        <td class="fw-medium">@request.Title</td>
                                        <td>@request.RequestType</td>
                                        <td>
                                            <span class="status-badge @GetStatusBadgeClass(request.Status)">@request.Status</span>
                                        </td>
                                        <td>@request.DateSubmitted.ToString("MMMM dd, yyyy hh:mm tt")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="empty-state-content">
                            <div class="empty-state-icon-wrapper">
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16"><path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/><path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zM4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/></svg>
                            </div>
                            <h3 class="empty-state-title">No Requests Found</h3>
                            <p class="empty-state-message">You have not submitted any requests yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(Apartment.Enums.RequestStatus status)
    {
        return status switch
        {
            Apartment.Enums.RequestStatus.Submitted => "status-submitted",
            Apartment.Enums.RequestStatus.InProgress => "status-in-progress",
            Apartment.Enums.RequestStatus.Completed => "status-completed",
            Apartment.Enums.RequestStatus.Cancelled => "status-cancelled",
            _ => "status-submitted"
        };
    }
}

<style>
    /* 1. PALETTE & FONTS */
    :root {
        --matcha-deep-green: #4A6F47;
        --matcha-soft-green: #A8C3A0;
        --ceremonial-matcha: #7DA26C;
        --fresh-cream-white: #F9F8F3;
        --roasted-brown: #8B6F47;
        --golden-whisk: #D7A85A;
        --azuki-red: #B35A5A;
        --ink-black: #2C2C2C;
        --leaf-gray: #7B7B7B;
        --tea-mist: #E7E5D8;
        --white: #FFFFFF;
        
        --font-headings: 'Cormorant Garamond', Georgia, serif;
        --font-body: 'Inter', Arial, sans-serif;
    }

    /* 2. LAYOUT */
    .main-content {
        background-color: var(--fresh-cream-white);
        min-height: 100vh;
        flex-grow: 1;
        padding: 32px;
        font-family: var(--font-body);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .page-content-wrapper {
        width: 100%;
        max-width: 1100px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 32px;
    }
    
    .page-title {
        font-family: var(--font-headings);
        font-weight: 700;
        font-size: 36px;
        color: var(--matcha-deep-green);
        margin: 0;
    }

    .page-subtitle {
        font-size: 18px;
        color: var(--leaf-gray);
        margin-top: 4px;
    }

    /* 3. COMPONENTS */
    .btn-primary-matcha {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-family: var(--font-body);
        font-size: 16px;
        font-weight: 600;
        padding: 12px 24px;
        border-radius: 8px;
        border: 1px solid transparent;
        text-decoration: none;
        cursor: pointer;
        background-color: var(--matcha-deep-green);
        color: var(--white);
        transition: all 150ms ease-out;
    }
    .btn-primary-matcha:hover {
        background-color: var(--ceremonial-matcha);
        color: var(--white);
    }

    .matcha-panel {
        background-color: var(--white);
        border: 1px solid var(--tea-mist);
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(44, 44, 44, 0.04);
    }
    
    .table-responsive {
        padding: 8px;
    }

    /* Table */
    .matcha-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        table-layout: fixed;
    }

    .matcha-table th, 
    .matcha-table td {
        padding: 20px;
        text-align: left;
        font-size: 15px;
        border-bottom: 1px solid var(--tea-mist);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .matcha-table tbody tr:last-child td {
        border-bottom: none;
    }

    .matcha-table thead th {
        font-weight: 600;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: var(--matcha-deep-green);
        border-bottom-width: 2px;
    }

    .matcha-table tbody tr:hover {
        background-color: #F7F9F6;
    }
    
    .matcha-table .fw-medium {
         color: var(--ink-black);
         font-weight: 500 !important;
    }

    /* Status Badges */
    .status-badge {
        display: inline-block;
        padding: 4px 12px;
        font-size: 13px;
        font-weight: 600;
        border-radius: 9999px;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }
    .status-submitted {
        color: var(--leaf-gray);
        background-color: #F3F4F6; /* light gray */
    }
    .status-in-progress {
        color: var(--roasted-brown);
        background-color: #FEF3C7; /* light yellow/golden */
    }
    .status-completed {
        color: #3f6212; /* dark green */
        background-color: #ECFCCB; /* light green */
    }
    .status-cancelled {
        color: #991B1B; /* dark red */
        background-color: #FEE2E2; /* light red */
    }

    /* Notification */
    .matcha-notification {
        display: flex;
        align-items: center;
        gap: 12px;
        border: 1px solid;
        border-left-width: 4px;
        border-radius: 8px;
        padding: 16px;
        margin-bottom: 24px;
        position: relative;
    }
    .matcha-notification.is-success {
        background-color: #f0fdf4;
        border-color: var(--ceremonial-matcha);
        color: var(--matcha-deep-green);
    }
    .matcha-notification .btn-close {
        position: absolute;
        top: 50%;
        right: 16px;
        transform: translateY(-50%);
    }

    /* Empty State */
    .empty-state-content {
        text-align: center;
        padding: 64px 40px;
    }
    .empty-state-icon-wrapper {
        width: 72px; height: 72px;
        border-radius: 50%;
        background-color: #F0F3EF;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 24px;
        color: var(--matcha-deep-green);
    }
    .empty-state-title {
        font-family: var(--font-headings);
        font-size: 24px;
        color: var(--ink-black);
        font-weight: 600;
        margin-bottom: 8px;
    }
    .empty-state-message {
        font-size: 16px;
        color: var(--leaf-gray);
        max-width: 400px;
        margin: 0 auto;
    }

</style>
