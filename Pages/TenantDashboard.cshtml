@page
@model Apartment.Pages.TenantDashboardModel
@{
    ViewData["Title"] = "Tenant Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-2">Tenant Dashboard</h1>
            <p class="text-muted">Welcome back, <strong>@Model.Username</strong>. View your account information and bills.</p>
        </div>
    </div>

    @if (Model.TenantInfo != null)
    {
        <!-- Tenant Information Card -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Your Information</h5>
                        <p class="mb-1"><strong>Name:</strong> @Model.TenantInfo.FullName</p>
                        <p class="mb-1"><strong>Email:</strong> @Model.TenantInfo.PrimaryEmail</p>
                        <p class="mb-1"><strong>Phone:</strong> @Model.TenantInfo.PrimaryPhone</p>
                        <p class="mb-0"><strong>Unit:</strong> @(Model.TenantInfo.UnitNumber ?? "Not Assigned")</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Lease Information</h5>
                        <p class="mb-1"><strong>Status:</strong> <span class="badge bg-info">@Model.TenantInfo.Status</span></p>
                        <p class="mb-1"><strong>Monthly Rent:</strong> @Model.TenantInfo.MonthlyRent.ToString("C")</p>
                        <p class="mb-1"><strong>Lease Start:</strong> @Model.TenantInfo.LeaseStartDate.ToString("MM/dd/yyyy")</p>
                        <p class="mb-0"><strong>Lease End:</strong> @Model.TenantInfo.LeaseEndDate.ToString("MM/dd/yyyy")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted text-uppercase small mb-2">Outstanding Balance</h6>
                        <h2 class="mb-0 text-danger">@Model.OutstandingBalance.ToString("C")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted text-uppercase small mb-2">Pending Bills</h6>
                        <h2 class="mb-0">@Model.PendingBills</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted text-uppercase small mb-2">Total Paid</h6>
                        <h2 class="mb-0 text-success">@Model.TotalPaid.ToString("C")</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Bills -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Recent Bills</h5>
                        @if (Model.RecentBills.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Billing Period</th>
                                            <th>Amount Due</th>
                                            <th>Amount Paid</th>
                                            <th>Due Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var bill in Model.RecentBills)
                                        {
                                            <tr>
                                                <td>@bill.BillingPeriod</td>
                                                <td>@bill.AmountDue.ToString("C")</td>
                                                <td>@bill.AmountPaid.ToString("C")</td>
                                                <td>@bill.DueDate.ToString("MM/dd/yyyy")</td>
                                                <td>
                                                    @if (bill.IsPaid)
                                                    {
                                                        <span class="badge bg-success">Paid</span>
                                                    }
                                                    else if (bill.DueDate < DateTime.Now)
                                                    {
                                                        <span class="badge bg-danger">Overdue</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">Pending</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No bills found.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No tenant profile found. Please contact the administrator.
        </div>
    }
</div>

